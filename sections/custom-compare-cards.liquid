{% schema %}
{
  "name": "Compare Cards",
  "settings": [
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#edeadd"
    },
    {
      "type": "color",
      "id": "border_top_color",
      "label": "Top Border Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "border_bottom_color",
      "label": "Bottom Border Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Section Padding Top (px)",
      "default": 64
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Section Padding Bottom (px)",
      "default": 64
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "How Our Brand <span>stands apart</span>"
    },
    {
      "type": "textarea",
      "id": "section_subheading",
      "label": "Section Subheading",
      "default": "Every detail is designed for what your baby needs mostâ€“comfort that feels like air, protection that feels like love."
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Card Title",
      "default": "Brand X"
    },
    {
      "type": "textarea",
      "id": "left_bullets",
      "label": "Left Card Bullets (one per line)",
      "default": "Thicker and heavier build that may restrict movement\nModerate breathability that can result in heat buildup\nNot specifically designed for tropical or humid conditions\nStrong absorbency performance, but with occasional bulkiness\nBasic, functional design with less attention to aesthetic appeal"
    },
    {
      "type": "image_picker",
      "id": "center_logo",
      "label": "Center Card Logo"
    },
    {
      "type": "text",
      "id": "center_title",
      "label": "Center Card Title",
      "default": "Our Brand"
    },
    {
      "type": "textarea",
      "id": "center_bullets",
      "label": "Center Card Bullets (one per line)",
      "default": "Ultra-thin & flexible for all-day movement\nEngineered for hot & humid conditions\nSpecifically engineered to stay cool and dry in hot weather\nEqual or better absorbency compared to premium brands, without sagging or leakage\nDesign-forward look with clean, modern aesthetics parents love"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Card Title",
      "default": "Brand Z"
    },
    {
      "type": "textarea",
      "id": "right_bullets",
      "label": "Right Card Bullets (one per line)",
      "default": "Bulky layers, especially when saturated, can feel heavy on the baby\nLower breathability, which may cause discomfort in warmer environments\nSome ventilation but not optimized for consistently hot climates\nGood absorbency, suitable for overnight use\nStylish design but leans more bold and playful than subtle or modern"
    }
  ],
  "presets": [
    {
      "name": "Compare Cards"
    }
  ]
}
{% endschema %}

<div class="compare-cards-section"
     style="background-color: {{ section.settings.section_bg_color }};
            border-top: 1px solid {{ section.settings.border_top_color }};
            border-bottom: 1px solid {{ section.settings.border_bottom_color }};
            padding-top: {{ section.settings.padding_top | default: 64 }}px;
            padding-bottom: {{ section.settings.padding_bottom | default: 64 }}px;">
  <div class="page-width">
    <div class="compare-cards__header">
      <h1 class="h1 compare-cards__title font-cursive" style="color:var(--custom-dark);">{{ section.settings.section_title }}</h1>
      {% if section.settings.section_subheading != blank %}
        <div class="compare-cards__subheading">{{ section.settings.section_subheading }}</div>
      {% endif %}
    </div>
    <div class="compare-cards__row">
      <!-- Left Card -->
      <div class="compare-cards__card compare-cards__card--side compare-cards__card--left">
        <div class="h2 compare-cards__card-title">{{ section.settings.left_title }}</div>
        <ul class="compare-cards__list">
          {% assign left_bullets = section.settings.left_bullets | newline_to_br | split: '<br />' %}
          {% for item in left_bullets %}
            <li>{{ item | strip }}</li>
          {% endfor %}
        </ul>
      </div>
      <!-- Center Card -->
      <div class="compare-cards__card compare-cards__card--center">
        {% comment %} {% if section.settings.center_logo != blank %}
          <div class="compare-cards__logo">
            <img
              src="{{ section.settings.center_logo | image_url: width: 240 }}"
              alt="{{ section.settings.center_title | escape }}"
              width="140" height="60" loading="lazy">
          </div>
        {% endif %} {% endcomment %}
        <div class="h2 compare-cards__card-title"><span>UltraFresh</span></div>
        <ul class="compare-cards__list compare-cards__list--center">
          {% assign center_bullets = section.settings.center_bullets | newline_to_br | split: '<br />' %}
          {% for item in center_bullets %}
            <li>
              <span class="compare-cards__icon">
                <svg width="26" height="26" viewBox="0 0 26 26" aria-hidden="true" focusable="false" style="vertical-align:middle;">
                  <circle cx="13" cy="13" r="12" stroke="var(--custom-secondary, #CEA478)" stroke-width="2" fill="transparent"/>
                  <polyline points="8.5,14.2 12,17.5 18,10.2" fill="none" stroke="var(--custom-secondary, #CEA478)" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
              {{ item | strip }}
            </li>
          {% endfor %}
        </ul>
      </div>
      <!-- Right Card -->
      <div class="compare-cards__card compare-cards__card--side compare-cards__card--right">
        <div class="h2 compare-cards__card-title">{{ section.settings.right_title }}</div>
        <ul class="compare-cards__list">
          {% assign right_bullets = section.settings.right_bullets | newline_to_br | split: '<br />' %}
          {% for item in right_bullets %}
            <li>{{ item | strip }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
.compare-cards__header {
  text-align: center;
  margin-bottom: 2.5rem;
}
.compare-cards__title {
  margin-bottom: 0.7rem;
}
.compare-cards__title span {
  color: var(--custom-secondary);
}
.compare-cards__subheading {
  margin: 0 auto 0;
  max-width: 660px;
  line-height: 1.6;
  opacity: 0.92;
}
.compare-cards__row {
  display: flex;
  gap: 2.2rem;
  justify-content: center;
  align-items: stretch;
  width: 100%;
}
.compare-cards__card {
  background: #edeadd;
  flex: 1 1 0%;
  padding: 2.5rem 1.7rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: none;
  border-radius: 0;
  min-width: 0;
}
.compare-cards__card--center {
  background: var(--custom-light);
  border: 2px solid var(--custom-secondary);
  box-shadow: 0 0 0 3px rgba(206,164,120,0.09);
  position: relative;
  z-index: 2;
}
.compare-cards__logo {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 1.3rem;
}
.compare-cards__card-title {
  text-align: center;
  margin-bottom: 1.4rem;
}
.compare-cards__list {
  list-style: none;
  padding: 0;
  margin: 0;
  width: 100%;
}
.compare-cards__list li {
  border-bottom: 1px solid #dad8ce;
  padding: 1.1em 1em;
  margin: 0;
  text-align: left;
}
.compare-cards__list li:last-child {
  border-bottom: none;
}
.compare-cards__list--center li {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}
.compare-cards__icon {
  display: inline-flex;
  align-items: center;
  margin-right: 0.2em;
  flex-shrink: 0;
}
@media (max-width: 900px) {
  .compare-cards__row {
    flex-direction: column;
  }
  .compare-cards__card--side {
    display: none !important;
  }
}
</style>
