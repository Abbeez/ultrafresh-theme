{% schema %}
{
  "name": "UF Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading_accent",
      "label": "Heading Accent",
      "default": "Every story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "deserves gentle care"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Every baby’s journey is filled with joy, discovery, and growth, and at Ultrafresh, we celebrate these special moments each smile, wiggle, and milestone."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Click here to see parent stories"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "metaobject_list",
      "id": "testimonials",
      "label": "Testimonials to show",
      "metaobject_type": "testimonials",
      "limit": 12
    }
  ],
  "presets": [
    {
      "name": "UF Testimonials"
    }
  ]
}
{% endschema %}

<div class="uf-testimonials__outer uf-colors">
  <div class="page-width uf-testimonials__container">
    <!-- Left Column -->
    <div class="uf-testimonials__left">
      <h2 class="h1 uf-testimonials__heading">
        <span class="uf-testimonials__accent">{{ section.settings.heading_accent }}</span>
        {{ section.settings.heading }}
      </h2>
      <div class="uf-testimonials__desc">{{ section.settings.description }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-testimonials__btn">
          {{ section.settings.button_label }}
          <span class="uf-testimonials__arrow">›</span>
        </a>
      {% endif %}
    </div>
    <!-- Right Column (Slider) -->
    <div class="uf-testimonials__right">
      <div class="uf-testimonials__slider swiper uf-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for testimonial in section.settings.testimonials %}
            <div class="swiper-slide">
              <div 
                class="uf-testimonials__card"
                style="background-image: linear-gradient(0deg, rgba(236,218,192,0.92) 0%, rgba(236,218,192,0.16) 60%, rgba(236,218,192,0.0) 100%), url('{{ testimonial.photo | image_url: width: 600, height: 800, crop: "center" }}');"
                role="img"
                aria-label="{{ testimonial.name | escape }}"
              >
                <div class="uf-testimonials__card-content">
                  <div class="uf-testimonials__name">{{ testimonial.name }}</div>
                  <div class="uf-testimonials__quote">“{{ testimonial.message }}”</div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <!-- Swiper progressbar pagination -->
        <div class="swiper-pagination swiper-pagination-progressbar"></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof Swiper !== "undefined") {
      new Swiper('.uf-swiper-{{ section.id }}', {
        slidesPerView: 3,
        spaceBetween: 24,
        pagination: {
          el: '.uf-swiper-{{ section.id }} .swiper-pagination',
          type: 'progressbar',
        },
        breakpoints: {
          0: { slidesPerView: 1 },
          700: { slidesPerView: 2 },
          1024: { slidesPerView: 3 }
        }
      });
    }
  });
</script>

<style>
:root,
.uf-colors {
  --custom-primary: #ECDAC0;
  --custom-secondary: #CEA478;
  --custom-dark: #384148;
  --custom-light: #FDFCF9;
}

.uf-testimonials__outer {
  width: 100%;
  background: var(--custom-light);
  padding: 0 0 2rem 0;
}
.uf-testimonials__container {
  display: flex;
  gap: 3rem;
  padding: 3vw 0;
  align-items: flex-start;
}
.uf-testimonials__left {
  flex: 0 0 32%;
  padding-right: 1vw;
}
.uf-testimonials__heading {
  font-family: var(--font-heading-family, var(--font-body-family, 'Inter', sans-serif));
  margin-bottom: 1.1rem;
  color: var(--custom-dark);
  text-align: left;
  line-height: 1.12;
}
.uf-testimonials__accent {
  color: var(--custom-secondary);
}
.uf-testimonials__desc {
  font-size: inherit;
  color: var(--custom-dark);
  margin-bottom: 1.6rem;
  opacity: 0.97;
  line-height: 1.7;
  text-align: left;
  font-family: var(--font-body-family, 'Inter', sans-serif);
}
.uf-testimonials__btn {
  display: inline-flex;
  align-items: center;
  color: var(--custom-dark);
  font-weight: 500;
  background: none;
  border: none;
  text-decoration: underline;
  cursor: pointer;
  font-size: inherit;
  padding: 0;
  transition: color 0.2s;
  font-family: var(--font-body-family, 'Inter', sans-serif);
}
.uf-testimonials__btn:hover,
.uf-testimonials__btn:focus {
  color: var(--custom-secondary);
}
.uf-testimonials__arrow {
  margin-left: 0.6em;
  font-size: 1.3em;
  line-height: 1;
}
.uf-testimonials__right {
  flex: 1;
  min-width: 0;
}
.uf-testimonials__slider {
  width: 100%;
}
.uf-testimonials__card {
  background-size: cover;
  background-position: center;
  border-radius: 0.8rem;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  min-height: 400px;
  height: 100%;
  box-shadow: 0 2px 8px 0 rgba(20,22,14,0.06);
}
.uf-testimonials__card-content {
  padding: 1.7rem 1.3rem 1.2rem 1.3rem;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
  font-family: var(--font-body-family, 'Inter', sans-serif);
}
.uf-testimonials__name {
  font-weight: 700;
  font-size: inherit;
  color: var(--custom-dark);
  margin-bottom: 0.6rem;
  text-align: left;
  line-height: 1.25;
  letter-spacing: 0.01em;
  text-shadow: 0 2px 8px rgba(20,22,14,0.04);
}
.uf-testimonials__quote {
  font-size: inherit;
  color: var(--custom-dark);
  opacity: 0.96;
  font-style: italic;
  margin-bottom: 0;
  text-align: left;
  word-break: break-word;
  text-shadow: 0 2px 8px rgba(20,22,14,0.09);
}

/* Swiper Progressbar Pagination Customization */
.uf-testimonials__slider .swiper-pagination-progressbar {
  background: var(--custom-primary);
  height: 6px !important;
  border-radius: 3px;
  margin: 22px 0 0 0;
  width: 100%;
  position: relative;
  text-align: left;
  overflow: visible;
}

.uf-testimonials__slider .swiper-pagination-progressbar-fill {
  background: var(--custom-secondary) !important;
  border-radius: 3px;
  position: relative;
  height: 100%;
  transition: width 0.2s;
}

/* Thumb/indicator at fill end */
.uf-testimonials__slider .swiper-pagination-progressbar-fill::after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  background: var(--custom-secondary);
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(56,65,72,0.05);
  transition: right 0.2s;
}

/* Responsive styles */
@media (max-width: 1020px) {
  .uf-testimonials__container {
    flex-direction: column;
    gap: 2.4rem;
    padding: 2rem 0;
  }
  .uf-testimonials__left {
    padding-right: 0;
    margin-bottom: 1.3rem;
  }
  .uf-testimonials__right {
    width: 100%;
  }
}
@media (max-width: 700px) {
  .uf-testimonials__slider .swiper-slide {
    max-width: 100% !important;
  }
  .uf-testimonials__card {
    min-height: 270px;
  }
  .uf-testimonials__slider .swiper-pagination-progressbar {
    margin-left: 0;
  }
}
@media (max-width: 600px) {
  .uf-testimonials__container {
    padding: 1rem 0;
  }
  .uf-testimonials__card-content {
    padding: 1rem 0.7rem 0.9rem 0.7rem;
  }
  .uf-testimonials__slider .swiper-pagination-progressbar-fill::after {
    width: 16px;
    height: 16px;
  }
}
</style>
