{% schema %}
{
  "name": "UF Testimonials",
  "settings": [
    {
      "type": "number",
      "id": "padding_top",
      "label": "Section Padding Top (px)",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Section Padding Bottom (px)",
      "default": 60
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (use <span> for accent)",
      "default": "Every story <span>deserves gentle care</span>"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Every baby’s journey is filled with joy, discovery, and growth, and at Ultrafresh, we celebrate these special moments each smile, wiggle, and milestone."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Click here to see parent stories"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "metaobject_list",
      "id": "testimonials",
      "label": "Testimonials to show",
      "metaobject_type": "testimonials",
      "limit": 12
    }
  ],
  "presets": [
    {
      "name": "UF Testimonials"
    }
  ]
}
{% endschema %}

<div class="uf-testimonials__outer uf-colors"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="uf-testimonials__container">
    <div class="uf-testimonials__left">
      <h2 class="h1 uf-testimonials__heading">
        {{ section.settings.heading }}
      </h2>
      <div class="uf-testimonials__desc">{{ section.settings.description }}</div>
      {% if section.settings.button_label and section.settings.button_url %}
        <a href="{{ section.settings.button_url }}" class="uf-testimonials__btn">
          {{ section.settings.button_label }}
          <span class="uf-testimonials__arrow">›</span>
        </a>
      {% endif %}
    </div>
    <div class="uf-testimonials__right">
      <div class="swiper uf-swiper-{{ section.id }} uf-testimonials__slider">
        <div class="swiper-wrapper">
          {% for testimonial in section.settings.testimonials %}
            <div class="swiper-slide">
              <div class="uf-testimonials__card"
                   style="
                     background-image:
                       linear-gradient(to top, var(--custom-secondary) 10%, transparent 100%),
                       url('{{ testimonial.photo | image_url: width: 600, height: 800, crop: 'center' }}');
                   ">
                <div class="uf-testimonials__card-content">
                  <div class="uf-testimonials__name">{{ testimonial.name }}</div>
                  <div class="uf-testimonials__quote">“{{ testimonial.message }}”</div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <!-- Progressbar Pagination -->
        <div class="swiper-pagination swiper-pagination-progressbar"></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof Swiper !== "undefined") {
      new Swiper('.uf-swiper-{{ section.id }}', {
        slidesPerView: 2,
        spaceBetween: 24,
        pagination: {
          el: '.uf-swiper-{{ section.id }} .swiper-pagination',
          type: 'progressbar'
        },
        breakpoints: {
          0:   { slidesPerView: 1, spaceBetween: 12 },
          989: { slidesPerView: 2, spaceBetween: 24 }
        }
      });
    }
  });
</script>

<style>
.uf-testimonials__outer {
  width: 100%;
  background: var(--custom-bg);
}
.uf-testimonials__container {
  display: flex;
  gap: 3rem;
  padding: 0 5rem;
  align-items: flex-start;
}
.uf-testimonials__left {
  flex: 0 0 30%;
}
.uf-testimonials__right {
  flex: 1;
}
.uf-testimonials__heading {
  margin-bottom: 1.1rem;
  color: var(--custom-dark);
  line-height: 1.12;
}
.uf-testimonials__heading span {
  color: var(--custom-secondary);
}
.uf-testimonials__desc {
  margin-bottom: 1.6rem;
  color: var(--custom-dark);
  opacity: 0.97;
  line-height: 1.7;
}
.uf-testimonials__btn {
  display: inline-flex;
  align-items: center;
  color: var(--custom-dark);
  background: none;
  border: none;
  text-decoration: underline;
  font-weight: 500;
  cursor: pointer;
}
.uf-testimonials__btn:hover {
  color: var(--custom-secondary);
}
.uf-testimonials__arrow {
  margin-left: 0.6em;
  font-size: 1.3em;
}
.uf-testimonials__slider {
  width: 100%;
}
.uf-testimonials__slider .swiper-slide {
  width: calc((100% - 24px) / 2) !important;
}
.uf-testimonials__card {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  min-height: 540px;
  background-size:cover;
  background-repeat: no-repeat;
}
.uf-testimonials__card-content {
  padding: 2.3rem 2.1rem 1.7rem;
  color: #fff;
}
.uf-testimonials__name {
  font-weight: 700;
  margin-bottom: 0.8rem;
  text-shadow: 0 2px 8px rgba(0,0,0,0.18);
}
.uf-testimonials__quote {
  opacity: 0.97;
  text-shadow: 0 2px 8px rgba(0,0,0,0.18);
}

/* Pagination styling */
.uf-testimonials__container .swiper-wrapper {
  padding-bottom: 20px;
}

.uf-testimonials__container .swiper-pagination-progressbar {
  background: rgba(0,0,0,0.1);
  height: 4px !important;
  border-radius: 2px;
  margin: 1.5rem 0 0;
}
.uf-testimonials__container .swiper-pagination-progressbar .swiper-pagination-progressbar-fill {
  background: var(--custom-secondary) !important;
  border-radius: 2px;
}

.uf-testimonials__container .swiper-horizontal > .swiper-pagination-progressbar,
.uf-testimonials__container .swiper-pagination-progressbar.swiper-pagination-horizontal {
  top: inherit;
  bottom: 0;
  z-index: 10 !important;
}

/* Tablet */
@media (max-width: 900px) {
  .uf-testimonials__outer {
    padding-top: 36px !important;
    padding-bottom: 36px !important;
  }
  .uf-testimonials__container {
    flex-direction: column;
    gap: 2.4rem;
    padding: 0 5rem;
  }
  .uf-testimonials__left,
  .uf-testimonials__right {
    flex: 0 0 100%;
  }
  {% comment %} .uf-testimonials__slider .swiper-slide {
    width: 100% !important;
  } {% endcomment %}
}

/* Mobile */
@media (max-width: 600px) {
  .uf-testimonials__outer {
    padding-top: 16px !important;
    padding-bottom: 16px !important;
  }
  .uf-testimonials__container {
    padding: 0 3rem;
  }
  uf-testimonials__slider .swiper-slide {
    width: 100% !important;
  }
  .uf-testimonials__card {
    min-height: 500px;
  }
  .uf-testimonials__card-content {
    padding: 1.4rem 1.3rem 1rem;
    text-align: center;
  }
  .uf-testimonials__heading,
  .uf-testimonials__desc,
  .uf-testimonials__name,
  .uf-testimonials__quote {
    text-align: center;
  }
}
</style>
