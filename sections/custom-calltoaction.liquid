{% schema %}
{
  "name": "UF Call to Action",
  "settings": [
    {
      "type": "image_picker",
      "id": "cta_image",
      "label": "Banner Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "More than a Diaper, Love, made visible"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Simple. True. This is your signature whisper to close the journey with meaning."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore Our Collection"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Section Padding Top (px)",
      "default": 80
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Section Padding Bottom (px)",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "UF Call to Action"
    }
  ]
}
{% endschema %}

<div class="uf-cta-banner"
  style="padding-top:{{ section.settings.padding_top | default: 80 }}px; padding-bottom:{{ section.settings.padding_bottom | default: 80 }}px;
    {% if section.settings.cta_image != blank %}
      background-image: linear-gradient(90deg, var(--custom-primary) 0%, transparent 80%), url('{{ section.settings.cta_image | image_url: width: 1800 }}');
    {% endif %}">
  <div class="uf-cta-banner__content page-width">
    <div class="uf-cta-banner__inner">
      <h2 class="h1 uf-cta-banner__headline">{{ section.settings.headline }}</h2>
      <div class="uf-cta-banner__subheadline">{{ section.settings.subheadline }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-cta-banner__btn">
          {{ section.settings.button_label }} <span>â€º</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.uf-cta-banner {
  width: 100vw;
  min-height: 430px;
  background-color: var(--custom-light);
  background-size: cover;
  background-position: center right;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
}
.uf-cta-banner__content {
  width: 100%;
  display: flex;
  align-items: center;
  min-height: 350px;
  z-index: 2;
  /* Page-width container, no need for extra max-width here */
}
.uf-cta-banner__inner {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 700px;
  padding-left: 1vw;
}
.uf-cta-banner__headline {
  color: var(--custom-light);
  margin-bottom: 1.2rem;
}
.uf-cta-banner__subheadline {
  color: var(--custom-light);
  margin-bottom: 2.1rem;
  opacity: 0.97;
}
.uf-cta-banner__btn {
  display: inline-flex;
  align-items: center;
  padding: 1.1rem 2.3rem;
  border: 1.5px solid var(--custom-light);
  background: none;
  color: var(--custom-light);
  font-weight: 700;
  border-radius: 0;
  min-width: 220px;
  text-decoration: none;
  font-family: inherit;
  transition: background 0.18s, color 0.18s, border-color 0.18s;
  font-size: inherit;
}
.uf-cta-banner__btn span {
  margin-left: 0.8em;
  font-size: 1.3em;
  line-height: 1;
}
.uf-cta-banner__btn:hover,
.uf-cta-banner__btn:focus {
  background: var(--custom-primary);
  border-color: var(--custom-primary);
  color: var(--custom-dark);
}
@media (max-width: 900px) {
  .uf-cta-banner__content {
    min-height: 200px;
  }
  .uf-cta-banner__inner {
    padding-left: 0;
    align-items: center;
    text-align: center;
    max-width: 100%;
    margin: 0 auto;
  }
  .uf-cta-banner__headline,
  .uf-cta-banner__subheadline,
  .uf-cta-banner__btn {
    color: var(--custom-dark);
    border-color: var(--custom-dark);
  }
  .uf-cta-banner {
    background-image: none !important;
    background-color: var(--custom-light);
  }
}
@media (max-width: 600px) {
  .uf-cta-banner {
    padding-top: 36px !important;
    padding-bottom: 36px !important;
    min-height: 1px;
  }
  .uf-cta-banner__inner {
    padding: 0 ;
  }
}
</style>
