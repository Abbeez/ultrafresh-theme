{% schema %}
{
  "name": "Main Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "alt_banner_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "alt_text_color",
      "label": "Text color",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "alt_headline",
      "label": "Headline",
      "default": "What does it mean to feel loved...<br>even before you understand the word?"
    },
    {
      "type": "text",
      "id": "alt_subheadline",
      "label": "Subheadline",
      "default": "A diaper so soft, so light, they hardly feel it – but always feel our love."
    },
    {
      "type": "text",
      "id": "alt_button_label",
      "label": "Button Label",
      "default": "See What Makes Us Different"
    },
    {
      "type": "url",
      "id": "alt_button_url",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "alt_show_secondary",
      "label": "Show Secondary Heading Section",
      "default": true
    },
    {
      "type": "number",
      "id": "alt_secondary_padding_top",
      "label": "Secondary Padding Top (px)",
      "default": 42
    },
    {
      "type": "number",
      "id": "alt_secondary_padding_bottom",
      "label": "Secondary Padding Bottom (px)",
      "default": 24
    },
    {
      "type": "text",
      "id": "alt_secondary_heading",
      "label": "Secondary Heading",
      "default": "Purposefully Made. Elegantly Designed."
    },
    {
      "type": "text",
      "id": "alt_secondary_subheading",
      "label": "Secondary Subheading",
      "default": "UltraFresh protects with care and performs with grace — a reflection of love in every detail"
    },
    {
      "type": "text",
      "id": "alt_sec_btn1_label",
      "label": "First Button Label",
      "default": "Pull Up Diapers"
    },
    {
      "type": "url",
      "id": "alt_sec_btn1_url",
      "label": "First Button Link"
    },
    {
      "type": "text",
      "id": "alt_sec_btn2_label",
      "label": "Second Button Label",
      "default": "Taped Up Diapers"
    },
    {
      "type": "url",
      "id": "alt_sec_btn2_url",
      "label": "Second Button Link"
    },
    {
      "type": "text",
      "id": "alt_sec_btn3_label",
      "label": "Third Button Label",
      "default": "Size Guide"
    },
    {
      "type": "url",
      "id": "alt_sec_btn3_url",
      "label": "Third Button Link"
    },
    {
      "type": "image_picker",
      "id": "alt_scroll_image",
      "label": "Scroll to feel the story Image"
    }
  ],
  "presets": [
    {
      "name": "Main Hero Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="main-hero-banner main-hero-banner--{{ section.settings.main_text_color }}"
  {% if section.settings.main_banner_image != blank %}
    style="background-image:url('{{ section.settings.main_banner_image | image_url: width: 2000 }}');"
  {% endif %}>

  <div class="main-hero-banner__center">
    <div class="main-hero-banner__inner">
      <h1 class="h0 main-hero-banner__headline">{{ section.settings.main_headline }}</h1>
      <div class="main-hero-banner__subheadline">{{ section.settings.main_subheadline }}</div>
      {% if section.settings.main_button_label != blank and section.settings.main_button_url != blank %}
        <a href="{{ section.settings.main_button_url }}" class="main-hero-banner__btn">
          {{ section.settings.main_button_label }}
          <span class="main-hero-banner__btn-arrow">›</span>
        </a>
      {% endif %}
    </div>

    {% if section.settings.main_scroll_image != blank %}
      <div class="main-hero-banner__scroll">
        <img src="{{ section.settings.main_scroll_image | image_url }}" alt="Scroll to feel the story" loading="lazy" width="130" height="40">
      </div>
    {% endif %}

    {% if section.settings.main_show_secondary %}
      <div class="main-hero-banner__secondary" style="padding-top: {{ section.settings.main_secondary_padding_top }}px; padding-bottom: {{ section.settings.main_secondary_padding_bottom }}px;">
        <h2 class="h1 main-hero-banner__secondary-heading">{{ section.settings.main_secondary_heading }}</h2>
        <div class="main-hero-banner__secondary-subheading">{{ section.settings.main_secondary_subheading }}</div>
        <div class="main-hero-banner__secondary-btns">
          {% if section.settings.main_sec_btn1_label != blank and section.settings.main_sec_btn1_url != blank %}
            <a href="{{ section.settings.main_sec_btn1_url }}" class="main-hero-banner__outline-btn">{{ section.settings.main_sec_btn1_label }} <span>›</span></a>
          {% endif %}
          {% if section.settings.main_sec_btn2_label != blank and section.settings.main_sec_btn2_url != blank %}
            <a href="{{ section.settings.main_sec_btn2_url }}" class="main-hero-banner__outline-btn">{{ section.settings.main_sec_btn2_label }} <span>›</span></a>
          {% endif %}
          {% if section.settings.main_sec_btn3_label != blank and section.settings.main_sec_btn3_url != blank %}
            <a href="{{ section.settings.main_sec_btn3_url }}" class="main-hero-banner__outline-btn">{{ section.settings.main_sec_btn3_label }} <span>›</span></a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
.main-hero-banner {
  position: relative;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 250px 0 180px 0;
  overflow: hidden;
  transition: padding 0.2s;
}
.main-hero-banner__center {
  position: relative;
  z-index: 2;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.main-hero-banner__inner,
.main-hero-banner__secondary {
  max-width: 1050px;
  padding: 0 2rem;
  margin: auto;
  word-break: break-word;
  text-align: center;
}
.main-hero-banner__headline {
  margin-bottom: 2.2rem;
  color: var(--custom-light);
}
.main-hero-banner--dark .main-hero-banner__headline {
  color: var(--custom-dark);
}
.main-hero-banner__subheadline {
  opacity: 0.98;
  margin-bottom: 2.2rem;
  color: var(--custom-light);
}
.main-hero-banner--dark .main-hero-banner__subheadline {
  color: var(--custom-dark);
}
.main-hero-banner__btn {
  display: inline-flex;
  align-items: center;
  background: var(--custom-primary);
  color: var(--custom-dark);
  padding: 1.1rem 2.3rem;
  min-width: 180px;
  text-decoration: none;
  font-weight: 500;
  border-radius: 0;
  transition: background 0.18s, color 0.18s;
  margin-bottom: 2.5rem;
  justify-content: center;
}
.main-hero-banner__btn-arrow {
  margin-left: 0.8em;
  line-height: 1;
}
.main-hero-banner__btn:hover,
.main-hero-banner__btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
}
.main-hero-banner__scroll {
  position: absolute;
  right: 4vw;
  top: 54%;
  transform: translateY(-50%);
  z-index: 4;
  display: flex;
  align-items: center;
  opacity: 0.98;
  pointer-events: none;
}
.main-hero-banner__scroll img {
  max-width: 140px;
  width: 100%;
  height: auto;
  display: block;
  filter: drop-shadow(0 1px 8px rgba(0,0,0,0.04));
}
@media (max-width: 700px) {
  .main-hero-banner__scroll {
    display: none;
  }
}
.main-hero-banner__secondary {
  margin-top: 2.6rem;
  text-align: center;
  transition: padding 0.22s;
}
.main-hero-banner__secondary-heading {
  margin: 0 0 1.2rem 0;
  color: var(--custom-light);
}
.main-hero-banner--dark .main-hero-banner__secondary-heading {
  color: var(--custom-dark);
}
.main-hero-banner__secondary-subheading {
  color: var(--custom-light);
  margin-bottom: 2.2rem;
  opacity: 0.94;
}
.main-hero-banner--dark .main-hero-banner__secondary-subheading {
  color: var(--custom-dark);
}
.main-hero-banner__secondary-btns {
  display: flex;
  gap: 1.2rem;
  justify-content: center;
  flex-wrap: wrap;
}
.main-hero-banner__outline-btn {
  display: inline-flex;
  align-items: center;
  padding: 0.7rem 2.1rem;
  background: none;
  border: 1.5px solid var(--custom-primary);
  color: var(--custom-light);
  font-weight: 500;
  text-decoration: none;
  transition: all 0.16s ease;
  min-width: 160px;
  justify-content: center;
  border-radius: 0;
  margin-bottom: 0.7rem;
}
.main-hero-banner__outline-btn span {
  margin-left: 0.7em;
  line-height: 1;
}
.main-hero-banner__outline-btn:hover,
.main-hero-banner__outline-btn:focus {
  background: var(--custom-primary);
  color: var(--custom-dark);
  border-color: var(--custom-primary);
}
.main-hero-banner--dark .main-hero-banner__outline-btn {
  border-color: var(--custom-dark);
  color: var(--custom-dark);
}
.main-hero-banner--dark .main-hero-banner__outline-btn:hover,
.main-hero-banner--dark .main-hero-banner__outline-btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
  border-color: var(--custom-secondary);
}
@media (max-width: 990px) {
  .main-hero-banner {
    background-attachment: scroll;
    padding: 130px 0 80px;
  }
  .main-hero-banner__inner,
  .main-hero-banner__secondary {
    padding-left: 1.7rem !important;
    padding-right: 1.7rem !important;
    max-width: 99vw;
  }
  .main-hero-banner__headline {
    font-size: clamp(1.3rem, 7vw, 3rem) !important;
  }
  .main-hero-banner__secondary {
    margin-top: 1.6rem;
    padding-top: 10px;
    padding-bottom: 4px;
  }
}
@media (max-width: 749px) {
  .main-hero-banner__inner,
  .main-hero-banner__secondary {
    padding-left: 1.1rem;
    padding-right: 1.1rem;
  }
}
@media (max-width: 479px) {
  .main-hero-banner__inner,
  .main-hero-banner__secondary {
    padding-left: 0.6rem;
    padding-right: 0.6rem;
  }
}
</style>