{% schema %}
{
  "name": "Page Header",
  "tag": "section",
  "class": "uf-page-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "More than a Diaper, Love, made visible"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Simple. True. This is your signature whisper to close the journey with meaning."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore Our Collection"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Page Header",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="uf-page-header"
  style="
    {% if section.settings.header_image != blank %}
      background-image: linear-gradient(178deg, rgba(132, 86, 60, 0.71) 0%, rgba(151, 132, 107, 0.77) 100%), url('{{ section.settings.header_image | image_url: width: 1800 }}');
    {% else %}
      background-image: linear-gradient(178deg, rgba(132, 86, 60, 0.88) 0%, rgba(151, 132, 107, 0) 100%);
    {% endif %}
  ">
  <div class="uf-page-header__content page-width">
    <div class="uf-page-header__inner">
      <h1 class="h1 uf-page-header__headline">{{ section.settings.headline }}</h1>
      <div class="uf-page-header__subheadline">{{ section.settings.subheadline }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-page-header__btn">
          {{ section.settings.button_label }} <span>â€º</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.uf-page-header {
  position: relative;
  width: 100vw;
  background-attachment: fixed;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding-top: 100px;
  padding-bottom: 100px;
}

.uf-page-header__content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
}

.uf-page-header__inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 1080px;
  padding: 0 1.5rem;
}

.uf-page-header__headline {
  color: var(--custom-light);
  margin-bottom: 1.2rem;
}

.uf-page-header__subheadline {
  color: var(--custom-light);
  margin-bottom: 2.1rem;
  opacity: 0.97;
}

.uf-page-header__btn {
  display: inline-flex;
  align-items: center;
  padding: 1.1rem 2.3rem;
  border: 1.5px solid var(--custom-light);
  background: none;
  color: var(--custom-light);
  font-weight: 700;
  border-radius: 0;
  min-width: 220px;
  text-decoration: none;
  font-family: inherit;
  transition: background 0.18s, color 0.18s, border-color 0.18s;
  font-size: inherit;
}

.uf-page-header__btn span {
  margin-left: 0.8em;
  font-size: 1.3em;
  line-height: 1;
}

.uf-page-header__btn:hover,
.uf-page-header__btn:focus {
  background: var(--custom-primary);
  border-color: var(--custom-primary);
  color: var(--custom-dark);
}

/* Tablet */
@media (max-width: 990px) {
  .uf-page-header {
    padding-top: 80px;
    padding-bottom: 80px;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .uf-page-header {
    padding-top: 100px; /* Increased padding */
    padding-bottom: 60px;
  }

  .uf-page-header__inner {
    padding: 0 1rem;
  }

  .uf-page-header__btn {
    padding: 0.9rem 2rem;
    font-size: 95%;
  }

  .uf-page-header__btn span {
    font-size: 1.1em;
  }
}
</style>
