{% schema %}
{
  "name": "UF Simple Home Banner",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color (fallback or overlay)",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "background_opacity",
      "label": "Background Color Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 0,
      "info": "Overlay opacity when using background image"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "checkbox",
      "id": "enable_text_shadow",
      "label": "Enable Text Shadow",
      "default": true,
      "info": "Adds shadow to text for better readability over images"
    },
    {
      "type": "header",
      "content": "Main Content"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "What does it mean to feel loved...<br>even before you understand the word?"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "A diaper so soft, so light, they hardly feel it – but always feel our love."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "See What Makes Us Different"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary Section"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_content",
      "label": "Show Secondary Heading Section",
      "default": true
    },
    {
      "type": "number",
      "id": "secondary_padding_top",
      "label": "Secondary Padding Top (px)",
      "default": 42
    },
    {
      "type": "number",
      "id": "secondary_padding_bottom",
      "label": "Secondary Padding Bottom (px)",
      "default": 24
    },
    {
      "type": "text",
      "id": "secondary_heading",
      "label": "Secondary Heading",
      "default": "Purposefully Made. Elegantly Designed."
    },
    {
      "type": "text",
      "id": "secondary_subheading",
      "label": "Secondary Subheading",
      "default": "UltraFresh protects with care and performs with grace — a reflection of love in every detail"
    },
    {
      "type": "header",
      "content": "Secondary Section Buttons"
    },
    {
      "type": "text",
      "id": "sec_btn1_label",
      "label": "First Button Label",
      "default": "Pull Up Diapers"
    },
    {
      "type": "url",
      "id": "sec_btn1_url",
      "label": "First Button Link"
    },
    {
      "type": "text",
      "id": "sec_btn2_label",
      "label": "Second Button Label",
      "default": "Taped Up Diapers"
    },
    {
      "type": "url",
      "id": "sec_btn2_url",
      "label": "Second Button Link"
    },
    {
      "type": "text",
      "id": "sec_btn3_label",
      "label": "Third Button Label",
      "default": "Size Guide"
    },
    {
      "type": "url",
      "id": "sec_btn3_url",
      "label": "Third Button Link"
    },
    {
      "type": "header",
      "content": "Additional Elements"
    },
    {
      "type": "image_picker",
      "id": "scroll_feel_image",
      "label": "Scroll to feel the story Image"
    }
  ],
  "presets": [
    {
      "name": "UF Simple Home Banner"
    }
  ]
}
{% endschema %}

{% assign has_bg_image = section.settings.banner_image %}
{% assign bg_opacity = section.settings.background_opacity | divided_by: 100.0 %}

<div class="uf-simple-banner uf-simple-banner--{{ section.settings.text_color }} {% if section.settings.enable_text_shadow %}uf-simple-banner--text-shadow{% endif %}"
  style="
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    {% if has_bg_image != blank and section.settings.background_opacity > 0 %}
      background-image:
        linear-gradient(
          rgba({{ section.settings.background_color | color_extract: 'red' }}, {{ section.settings.background_color | color_extract: 'green' }}, {{ section.settings.background_color | color_extract: 'blue' }}, {{ bg_opacity }}),
          rgba({{ section.settings.background_color | color_extract: 'red' }}, {{ section.settings.background_color | color_extract: 'green' }}, {{ section.settings.background_color | color_extract: 'blue' }}, {{ bg_opacity }})
        ),
        url('{{ has_bg_image | image_url: width: 2000 }}');
    {% elsif has_bg_image != blank %}
      background-image: url('{{ has_bg_image | image_url: width: 2000 }}');
    {% endif %}
  "
>
  <div class="uf-simple-banner__center">
    <div class="uf-simple-banner__inner">
      <h1 class="h1 uf-simple-banner__headline font-cursive">{{ section.settings.headline }}</h1>
      <div class="uf-simple-banner__subheadline">{{ section.settings.subheadline }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-simple-banner__btn">
          {{ section.settings.button_label }}
          <span class="uf-simple-banner__btn-arrow">›</span>
        </a>
      {% endif %}
    </div>

    {% if section.settings.scroll_feel_image != blank %}
      <div class="uf-simple-banner__scroll-feel">
        <img
          src="{{ section.settings.scroll_feel_image | image_url }}"
          alt="Scroll to feel the story"
          loading="lazy"
          width="130"
          height="40"
        >
      </div>
    {% endif %}

    {% if section.settings.show_secondary_content %}
      <div class="uf-simple-banner__secondary">
        <h2 class="h1 uf-simple-banner__secondary-heading font-cursive">{{ section.settings.secondary_heading }}</h2>
        <div class="uf-simple-banner__secondary-subheading">{{ section.settings.secondary_subheading }}</div>
        <div class="uf-simple-banner__secondary-btns">
          {% if section.settings.sec_btn1_label != blank and section.settings.sec_btn1_url != blank %}
            <a href="{{ section.settings.sec_btn1_url }}" class="uf-simple-banner__outline-btn">{{ section.settings.sec_btn1_label }} <span>›</span></a>
          {% endif %}
          {% if section.settings.sec_btn2_label != blank and section.settings.sec_btn2_url != blank %}
            <a href="{{ section.settings.sec_btn2_url }}" class="uf-simple-banner__outline-btn">{{ section.settings.sec_btn2_label }} <span>›</span></a>
          {% endif %}
          {% if section.settings.sec_btn3_label != blank and section.settings.sec_btn3_url != blank %}
            <a href="{{ section.settings.sec_btn3_url }}" class="uf-simple-banner__outline-btn">{{ section.settings.sec_btn3_label }} <span>›</span></a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
.uf-simple-banner {
  position: relative;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  overflow: hidden;

  /* Responsive padding using vh + clamp */
  padding: clamp(8vh, 12vh, 16vh) 0 clamp(10vh, 15vh, 20vh) 0;
  min-height: clamp(60vh, 75vh, 90vh);
  transition: padding 0.2s;
}

.uf-simple-banner__center {
  position: relative;
  z-index: 2;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.uf-simple-banner__inner,
.uf-simple-banner__secondary {
  max-width: 1050px;
  padding-left: clamp(1rem, 4vw, 2rem);
  padding-right: clamp(1rem, 4vw, 2rem);
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  word-break: break-word;
  text-align: center;
}

.uf-simple-banner__headline {
  margin-bottom: clamp(1.5rem, 4vw, 2.2rem);
  color: var(--custom-light);
  word-break: break-word;
  font-size: clamp(1.8rem, 5vw, 3.5rem);
  line-height: 1.2;
}

.uf-simple-banner--text-shadow .uf-simple-banner__headline {
  text-shadow: 0 5px 30px black;
}

.uf-simple-banner--dark .uf-simple-banner__headline {
  color: var(--custom-dark);
}

.uf-simple-banner__subheadline {
  opacity: 0.98;
  margin-bottom: clamp(1.5rem, 4vw, 2.2rem);
  color: var(--custom-light);
  word-break: break-word;
  font-size: clamp(0.9rem, 2.5vw, 1.1rem);
  line-height: 1.5;
}

.uf-simple-banner--text-shadow .uf-simple-banner__subheadline {
  text-shadow: 0 5px 30px black;
}

.uf-simple-banner--dark .uf-simple-banner__subheadline {
  color: var(--custom-dark);
}

.uf-simple-banner__btn {
  display: inline-flex;
  align-items: center;
  background: var(--custom-primary);
  color: var(--custom-dark);
  border: none;
  box-shadow: 0 2px 14px 0 rgba(20,22,14,0.08);
  font-weight: 500;
  padding: clamp(0.8rem, 2vw, 1.1rem) clamp(1.5rem, 4vw, 2.3rem);
  text-decoration: none;
  cursor: pointer;
  min-width: clamp(140px, 30vw, 180px);
  justify-content: center;
  border-radius: 0;
  transition: background 0.18s, color 0.18s;
  margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
  font-size: clamp(0.85rem, 2vw, 1rem);
}

.uf-simple-banner__btn-arrow {
  margin-left: 0.8em;
  line-height: 1;
}

.uf-simple-banner__btn:hover,
.uf-simple-banner__btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
}

.uf-simple-banner--dark .uf-simple-banner__btn {
  background: var(--custom-dark);
  color: var(--custom-light);
}

.uf-simple-banner--dark .uf-simple-banner__btn:hover,
.uf-simple-banner--dark .uf-simple-banner__btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
}

/* === Scroll to Feel the Story IMAGE === */
.uf-simple-banner__scroll-feel {
  position: absolute;
  right: 4vw;
  top: 54%;
  transform: translateY(-50%);
  z-index: 4;
  display: flex;
  align-items: center;
  opacity: 0.98;
  pointer-events: none;
}

.uf-simple-banner__scroll-feel img {
  max-width: clamp(100px, 20vw, 140px);
  width: 100%;
  height: auto;
  display: block;
  filter: drop-shadow(0 1px 8px rgba(0,0,0,0.04));
}

@media (max-width: 700px) {
  .uf-simple-banner__scroll-feel {
    display: none;
  }
}

/* === Secondary Heading Section === */
.uf-simple-banner__secondary {
  margin: clamp(1.5rem, 4vw, 2.6rem) 0 0 0;
  text-align: center;
  width: 100%;
  transition: padding 0.22s;
  word-break: break-word;

  /* Dynamic padding using vh */
  padding-top: clamp(3vh, 6vh, 10vh);
  padding-bottom: clamp(2vh, 5vh, 8vh);
}

.uf-simple-banner__secondary-heading {
  margin: 0 0 clamp(0.8rem, 3vw, 1.2rem) 0;
  color: var(--custom-light);
  word-break: break-word;
  font-size: clamp(1.5rem, 4vw, 2.5rem);
  line-height: 1.3;
}

.uf-simple-banner--text-shadow .uf-simple-banner__secondary-heading {
  text-shadow: 0 5px 30px black;
}

.uf-simple-banner--dark .uf-simple-banner__secondary-heading {
  color: var(--custom-dark);
}

.uf-simple-banner__secondary-subheading {
  color: var(--custom-light);
  margin-bottom: clamp(1.5rem, 4vw, 2.2rem);
  opacity: 0.94;
  word-break: break-word;
  font-size: clamp(0.85rem, 2.2vw, 1rem);
  line-height: 1.5;
}

.uf-simple-banner--text-shadow .uf-simple-banner__secondary-subheading {
  text-shadow: 0 5px 30px black;
}

.uf-simple-banner--dark .uf-simple-banner__secondary-subheading {
  color: var(--custom-dark);
}

.uf-simple-banner__secondary-btns {
  display: flex;
  gap: clamp(0.8rem, 2vw, 1.2rem);
  justify-content: center;
  flex-wrap: wrap;
}

.uf-simple-banner__outline-btn {
  display: inline-flex;
  align-items: center;
  padding: clamp(0.5rem, 1.5vw, 0.7rem) clamp(1.2rem, 3vw, 2.1rem);
  background: none;
  border: 1.5px solid var(--custom-primary);
  color: var(--custom-light);
  border-radius: 0;
  font-weight: 500;
  text-decoration: none;
  transition: background 0.16s, color 0.16s, border-color 0.16s;
  min-width: clamp(120px, 25vw, 160px);
  justify-content: center;
  margin-bottom: clamp(0.4rem, 1vw, 0.7rem);
  font-size: clamp(0.8rem, 1.8vw, 0.95rem);
}

.uf-simple-banner__outline-btn span {
  margin-left: 0.7em;
  line-height: 1;
}

.uf-simple-banner__outline-btn:hover,
.uf-simple-banner__outline-btn:focus {
  background: var(--custom-primary);
  color: var(--custom-dark);
  border-color: var(--custom-primary);
}

.uf-simple-banner--dark .uf-simple-banner__outline-btn {
  border: 1.5px solid var(--custom-dark);
  color: var(--custom-dark);
}

.uf-simple-banner--dark .uf-simple-banner__outline-btn:hover,
.uf-simple-banner--dark .uf-simple-banner__outline-btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
  border-color: var(--custom-secondary);
}

/* Mobile specific adjustments */
@media (max-width: 768px) {
  .uf-simple-banner {
    background-attachment: scroll;
    min-height: 55vh;
    padding: 8vh 0 10vh 0;
  }

  .uf-simple-banner__secondary {
    padding-top: 5vh;
    padding-bottom: 4vh;
  }

  .uf-simple-banner__secondary-btns {
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
  }

  .uf-simple-banner__outline-btn {
    width: 100%;
    max-width: 280px;
  }
}

/* Very small screens */
@media (max-width: 480px) {
  .uf-simple-banner {
    min-height: 45vh;
    padding: 6vh 0 8vh 0;
  }

  .uf-simple-banner__secondary {
    padding-top: 4vh;
    padding-bottom: 3vh;
  }
}
</style>
