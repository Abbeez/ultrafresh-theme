{% schema %}
{
  "name": "UF Simple Home Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "What does it mean to feel loved...<br>even before you understand the word?"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "A diaper so soft, so light, they hardly feel it – but always feel our love."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "See What Makes Us Different"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "UF Simple Home Banner"
    }
  ]
}
{% endschema %}

<div class="uf-simple-banner uf-simple-banner--{{ section.settings.text_color }}"
  {% if section.settings.banner_image != blank %}
    style="background-image:
      linear-gradient(to top, var(--custom-secondary) 20%, transparent 100%),
      url('{{ section.settings.banner_image | image_url: width: 2000 }}');
    "
  {% endif %}
>
  <div class="uf-simple-banner__center">
    <div class="uf-simple-banner__inner">
      <h1 class="h0 uf-simple-banner__headline">{{ section.settings.headline }}</h1>
      <div class="uf-simple-banner__subheadline">{{ section.settings.subheadline }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-simple-banner__btn">
          {{ section.settings.button_label }}
          <span class="uf-simple-banner__btn-arrow">›</span>
        </a>
      {% endif %}
    </div>
    <div class="uf-simple-banner__scroll-indicator">
      <span>Scroll to feel the story</span>
      <svg viewBox="0 0 40 40" width="32" height="32"><path d="M10 15 Q20 30 30 15" stroke="var(--custom-primary, #ECDAC0)" stroke-width="3" fill="none" /><polyline points="27,16 30,15 28,12" fill="none" stroke="var(--custom-primary, #ECDAC0)" stroke-width="3" /></svg>
    </div>
  </div>
</div>

<style>
:root {
  --custom-primary: #ECDAC0;
  --custom-secondary: #CEA478;
  --custom-dark: #384148;
  --custom-light: #FDFCF9;
}

.uf-simple-banner {
  position: relative;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  overflow: hidden;
  padding: 200px 0 200px 0;
  transition: padding 0.2s;
}

/* Centered content */
.uf-simple-banner__center {
  position: relative;
  z-index: 2;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.uf-simple-banner__inner {
  width: 100vw;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* Headline */
.uf-simple-banner__headline {
  margin-bottom: 2.2rem;
  color: var(--custom-light);
}
.uf-simple-banner--dark .uf-simple-banner__headline {
  color: var(--custom-dark);
}
/* Subheadline */
.uf-simple-banner__subheadline {
  opacity: 0.98;
  margin-bottom: 2.2rem;
  color: var(--custom-light);
}
.uf-simple-banner--dark .uf-simple-banner__subheadline {
  color: var(--custom-dark);
}
/* Button (square) */
.uf-simple-banner__btn {
  display: inline-flex;
  align-items: center;
  background: var(--custom-primary);
  color: var(--custom-dark);
  border: none;
  box-shadow: 0 2px 14px 0 rgba(20,22,14,0.08);
  font-weight: 500;
  padding: 1.1rem 2.3rem 1.1rem 2.3rem;
  text-decoration: none;
  cursor: pointer;
  min-width: 180px;
  justify-content: center;
  border-radius: 0;
  transition: background 0.18s, color 0.18s;
  margin-bottom: 2.5rem;
}
.uf-simple-banner__btn-arrow {
  margin-left: 0.8em;
  font-size: 1.3em;
  line-height: 1;
}
.uf-simple-banner__btn:hover,
.uf-simple-banner__btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
}
.uf-simple-banner--dark .uf-simple-banner__btn {
  background: var(--custom-dark);
  color: var(--custom-light);
}
.uf-simple-banner--dark .uf-simple-banner__btn:hover,
.uf-simple-banner--dark .uf-simple-banner__btn:focus {
  background: var(--custom-secondary);
  color: var(--custom-light);
}
/* Scroll indicator */
.uf-simple-banner__scroll-indicator {
  position: absolute;
  right: 6vw;
  bottom: 3vw;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.3rem;
  font-size: 1.1rem;
  font-weight: 400;
  opacity: 0.97;
  color: var(--custom-light);
}
.uf-simple-banner__scroll-indicator svg {
  display: block;
}
.uf-simple-banner--dark .uf-simple-banner__scroll-indicator {
  color: var(--custom-dark);
}

/* Responsive padding + tweaks */
@media (max-width: 700px) {
  .uf-simple-banner {
    padding: 60px 0 60px 0;
    background-attachment: scroll;
  }
  .uf-simple-banner__headline {
    margin-bottom: 1.5rem;
  }
  .uf-simple-banner__btn {
    min-width: 130px;
    padding: 0.9rem 1.7rem 0.9rem 1.7rem;
  }
  .uf-simple-banner__scroll-indicator {
    font-size: 1rem;
    right: 4vw;
    bottom: 2vw;
  }
}
@media (max-width: 500px) {
  .uf-simple-banner {
    padding: 30px 0 30px 0;
  }
  .uf-simple-banner__inner {
    padding: 0 0.5rem;
  }
  .uf-simple-banner__headline {
    margin-bottom: 1.1rem;
  }
  .uf-simple-banner__btn {
    min-width: 100px;
    padding: 0.7rem 1.2rem 0.7rem 1.2rem;
  }
  .uf-simple-banner__scroll-indicator {
    font-size: 0.98rem;
    right: 50%;
    transform: translateX(50%);
    bottom: 1.3rem;
  }
}
</style>
