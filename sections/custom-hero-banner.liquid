{% schema %}
{
  "name": "UF Home Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "What does it mean to feel loved...<br>even before you understand the word?"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "A diaper so soft, so light, they hardly feel it – but always feel our love."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "See What Makes Us Different"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "UF Home Banner"
    }
  ]
}
{% endschema %}

<div class="uf-banner__wrapper uf-banner__wrapper--{{ section.settings.text_color }}">
  {% if section.settings.banner_image != blank %}
    <div
      class="uf-banner__image-bg"
      style="background-image: url('{{ section.settings.banner_image | image_url: width: 2000 }}');">
    </div>
  {% else %}
    <div class="uf-banner__image-bg"></div>
  {% endif %}
  <div class="uf-banner__overlay"></div>
  <div class="uf-banner__content">
    <h1 class="uf-banner__headline">{{ section.settings.headline }}</h1>
    <div class="uf-banner__subheadline">{{ section.settings.subheadline }}</div>
    {% if section.settings.button_label != blank and section.settings.button_url != blank %}
      <a href="{{ section.settings.button_url }}" class="uf-banner__btn">
        {{ section.settings.button_label }}
        <span class="uf-banner__btn-arrow">›</span>
      </a>
    {% endif %}
  </div>
  <div class="uf-banner__scroll-indicator">
    <span>Scroll to feel the story</span>
    <svg viewBox="0 0 40 40" width="32" height="32"><path d="M10 15 Q20 30 30 15" stroke="var(--color-5)" stroke-width="3" fill="none" /><polyline points="27,16 30,15 28,12" fill="none" stroke="var(--color-5)" stroke-width="3" /></svg>
  </div>
</div>

<style>
.uf-banner__wrapper {
  position: relative;
  width: 100vw;
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-sizing: border-box;
  font-family: 'Lora', serif;
  background: var(--color-1);
}
.uf-banner__image-bg {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  width: 100vw; height: 100%;
  background-size: cover;
  background-position: center;
  z-index: 1;
}
.uf-banner__overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(180deg, rgba(20,22,14,0.30) 0%, rgba(20,22,14,0.25) 100%);
  z-index: 2;
}
.uf-banner__content {
  z-index: 3;
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
  padding: 5vw 2rem 0 2rem;
}
.uf-banner__headline {
  font-size: clamp(2rem, 5vw, 3.2rem);
  font-weight: 400;
  line-height: 1.15;
  margin-bottom: 1.5rem;
  letter-spacing: 0;
}
.uf-banner__subheadline {
  font-size: clamp(1.1rem, 2vw, 1.4rem);
  opacity: 0.98;
  margin-bottom: 2rem;
}
.uf-banner__btn {
  display: inline-flex;
  align-items: center;
  border: none;
  font-size: 1rem;
  font-weight: 500;
  padding: 0.9rem 2.1rem 0.9rem 2rem;
  border-radius: 2rem;
  margin-top: 0.5rem;
  box-shadow: 0 2px 14px 0 rgba(20,22,14,0.06);
  transition: background 0.2s, color 0.2s;
  text-decoration: none;
  cursor: pointer;
  min-width: 220px;
  justify-content: center;
}
.uf-banner__btn-arrow {
  margin-left: 0.8em;
  font-size: 1.5em;
  line-height: 1;
}
.uf-banner__scroll-indicator {
  position: absolute;
  right: 5vw;
  bottom: 2vw;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.4rem;
  font-size: 1rem;
  font-weight: 400;
  opacity: 0.94;
}
.uf-banner__scroll-indicator svg {
  display: block;
}

/* Light text mode */
.uf-banner__wrapper--light .uf-banner__content,
.uf-banner__wrapper--light .uf-banner__scroll-indicator {
  color: var(--color-1);
}
.uf-banner__wrapper--light .uf-banner__headline,
.uf-banner__wrapper--light .uf-banner__subheadline {
  color: var(--color-1);
}
.uf-banner__wrapper--light .uf-banner__btn {
  background: var(--color-7);
  color: var(--color-2);
}
.uf-banner__wrapper--light .uf-banner__btn:hover,
.uf-banner__wrapper--light .uf-banner__btn:focus {
  background: var(--color-3);
  color: var(--color-2);
}

/* Dark text mode */
.uf-banner__wrapper--dark .uf-banner__content,
.uf-banner__wrapper--dark .uf-banner__scroll-indicator {
  color: var(--color-2);
}
.uf-banner__wrapper--dark .uf-banner__headline,
.uf-banner__wrapper--dark .uf-banner__subheadline {
  color: var(--color-2);
}
.uf-banner__wrapper--dark .uf-banner__btn {
  background: var(--color-3);
  color: var(--color-1);
}
.uf-banner__wrapper--dark .uf-banner__btn:hover,
.uf-banner__wrapper--dark .uf-banner__btn:focus {
  background: var(--color-7);
  color: var(--color-2);
}

@media (max-width: 768px) {
  .uf-banner__content {
    max-width: 98vw;
    padding-top: 18vw;
  }
  .uf-banner__headline {
    font-size: clamp(1.4rem, 7vw, 2rem);
  }
  .uf-banner__btn {
    min-width: 150px;
    font-size: 0.95rem;
    padding: 0.8rem 1.6rem 0.8rem 1.4rem;
  }
  .uf-banner__scroll-indicator {
    right: 50%;
    transform: translateX(50%);
    bottom: 1vw;
    font-size: 0.95rem;
  }
}
</style>
