{% schema %}
{
  "name": "Tabbed Features Section",
  "tag": "section",
  "class": "tabbed-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_anchor_id",
      "label": "Custom Section ID (for Smooth Scroll)",
      "default": "tabbed-features"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDFCF9",
      "info": "Leave as-is to mimic --custom-light."
    },

    /* Image position */
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image Border Radius (px)",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0
    },

    /* Default background image */
    {
      "type": "image_picker",
      "id": "default_background_image",
      "label": "Default Background Image",
      "info": "Shows when no specific tab background is set"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Background Image Fit",
      "options": [
        { "value": "cover", "label": "Cover (fill & crop)" },
        { "value": "contain", "label": "Contain (no crop)" }
      ],
      "default": "cover"
    },

    /* Content */
    {
      "type": "text",
      "id": "overline",
      "label": "Sub text (above heading)",
      "default": "Premium Comfort"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (use <span> for accent)",
      "default": "Our Training Pants <span>Features</span>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Made with diaper-like absorbency, feather soft materials and CloudTouchâ„¢ Softness for ultimate comfort, our training pants are perfect for potty training.</p>"
    },

    /* Buttons */
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 Text"
    },
    {
      "type": "url",
      "id": "button_1_url",
      "label": "Button 1 URL"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text"
    },
    {
      "type": "url",
      "id": "button_2_url",
      "label": "Button 2 URL"
    },

    /* Spacing */
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature_tab",
      "name": "Feature Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Feather Soft"
        },
        {
          "type": "image_picker",
          "id": "tab_icon",
          "label": "Tab Icon"
        },
        {
          "type": "image_picker",
          "id": "tab_background_image",
          "label": "Tab Background Image",
          "info": "Specific background for this tab. If empty, uses default background."
        },
        {
          "type": "text",
          "id": "content_title",
          "label": "Content Title",
          "default": "Feather Soft"
        },
        {
          "type": "richtext",
          "id": "content_description",
          "label": "Content Description",
          "default": "<p>Crafted with an enhanced fibre blend and high-GSM topsheet for luxurious comfort</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabbed Features Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Feather Soft",
            "content_title": "Feather Soft",
            "content_description": "<p>Crafted with an enhanced fibre blend and high-GSM topsheet for luxurious comfort</p>"
          }
        },
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Resealable Tab",
            "content_title": "Resealable Tab",
            "content_description": "<p>Easy-to-use resealable tabs for convenient adjustments</p>"
          }
        },
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Dermatologically Tested",
            "content_title": "Dermatologically Tested",
            "content_description": "<p>Tested by dermatologists to ensure safety for sensitive skin</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% assign top_border_style = '' %}
{% if section.settings.show_top_border %}
  {% assign top_border_style = 'border-top: 1px solid var(--custom-borderbg)' %}
{% endif %}

{% assign bottom_border_style = '' %}
{% if section.settings.show_bottom_border %}
  {% assign bottom_border_style = 'border-bottom: 1px solid var(--custom-borderbg)' %}
{% endif %}

<div
  {% if section.settings.custom_anchor_id %}
    id="{{ section.settings.custom_anchor_id | escape }}"
  {% endif %}
  class="tabbed-section{% if section.settings.image_position == 'right' %} tabbed-section--reverse{% endif %}"
  style="
    {{ top_border_style }}; {{ bottom_border_style }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    --tabbed-img-fit: {{ section.settings.image_fit }};
    --tabbed-border-radius: {{ section.settings.image_border_radius | default: 0 }}px;
  "
>
  <div class="tabbed__text-col">
    <div class="tabbed__text-inner">
      {% if section.settings.overline != blank %}
        <div class="tabbed__overline">{{ section.settings.overline }}</div>
      {% endif %}

      <h2 class="h2 tabbed__heading font-cursive">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.description != blank %}
        <div class="tabbed__desc">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="tabbed__tabs-wrapper">
          {% for block in section.blocks %}
            <button 
              class="tabbed__tab{% if forloop.first %} tabbed__tab--active{% endif %}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_title }}
            </button>
          {% endfor %}
        </div>
      {% endif %}

      {% comment %} Buttons Section {% endcomment %}
      {% assign show_buttons = false %}
      {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
        {% assign show_buttons = true %}
      {% endif %}
      {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
        {% assign show_buttons = true %}
      {% endif %}

      {% if show_buttons %}
        <div class="tabbed__buttons-wrapper">
          {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
            <a href="{{ section.settings.button_1_url }}" class="tabbed__btn">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}

          {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
            <a href="{{ section.settings.button_2_url }}" class="tabbed__btn">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="tabbed__image-col">
    <!-- Background images for each tab -->
    {% for block in section.blocks %}
      {% assign tab_bg_image = block.settings.tab_background_image %}
      {% if tab_bg_image == blank %}
        {% assign tab_bg_image = section.settings.default_background_image %}
      {% endif %}
      
      {% if tab_bg_image != blank %}
        <img
          src="{{ tab_bg_image | image_url: width: 1600 }}"
          alt="{{ block.settings.content_title | strip_html }}"
          width="1600"
          height="auto"
          loading="lazy"
          class="tabbed__img tabbed__bg-image{% if forloop.first %} tabbed__bg-image--active{% endif %}"
          data-bg-index="{{ forloop.index0 }}"
        >
      {% endif %}
    {% endfor %}

    <!-- Fallback to default background if no tab backgrounds exist -->
    {% unless section.blocks.size > 0 %}
      {% if section.settings.default_background_image != blank %}
        <img
          src="{{ section.settings.default_background_image | image_url: width: 1600 }}"
          alt="{{ section.settings.heading | strip_html }}"
          width="1600"
          height="auto"
          loading="lazy"
          class="tabbed__img tabbed__bg-image tabbed__bg-image--active"
        >
      {% endif %}
    {% endunless %}

    <!-- Overlaid tab content -->
    <div class="tabbed__overlay-content">
      {% for block in section.blocks %}
        <div 
          class="tabbed__content-item{% if forloop.first %} tabbed__content-item--active{% endif %}"
          data-content-index="{{ forloop.index0 }}"
        >
          {% if block.settings.tab_icon != blank %}
            <div class="tabbed__icon">
              <img
                src="{{ block.settings.tab_icon | image_url: width: 120 }}"
                alt="{{ block.settings.content_title | strip_html }}"
                width="80"
                height="80"
                loading="lazy"
              >
            </div>
          {% endif %}

          <div class="tabbed__content-details">
            <h3 class="tabbed__content-title">{{ block.settings.content_title }}</h3>
            
            {% if block.settings.content_description != blank %}
              <div class="tabbed__content-desc">{{ block.settings.content_description }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
/* Base - Mobile First Approach */
.tabbed-section {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  transition: padding 0.2s, background-color 0.2s;
}

.tabbed__text-col {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  order: 1;
}

.tabbed__text-inner {
  width: 100%;
  max-width: 100%;
  margin: 0;
  padding: 7vw 1.5rem;
  box-sizing: border-box;
  text-align: center;
}

.tabbed__image-col {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 350px;
  max-height: 500px;
  overflow: hidden;
  order: 2;
}

/* Background images */
.tabbed__bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: var(--tabbed-img-fit);
  object-position: center;
  display: block;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
  border-radius: 0;
}

.tabbed__bg-image--active {
  opacity: 1;
}

/* Legacy support for single background image */
.tabbed__img:not(.tabbed__bg-image) {
  width: 100%;
  height: auto;
  object-fit: var(--tabbed-img-fit);
  object-position: center;
  display: block;
  border-radius: 0;
}

/* Text content - inherits font styling from theme */
.tabbed__overline {
  color: var(--custom-dark);
  letter-spacing: 0.06em;
  text-transform: none;
  line-height: 1.2;
  margin-bottom: 0.6rem;
}

.tabbed__heading {
  color: var(--custom-dark);
  margin-bottom: 1.1rem;
  margin-top: 1.1rem;
  line-height: 1.13;
}

.tabbed__desc {
  color: var(--custom-dark);
  opacity: 0.93;
  margin-bottom: 1.4rem;
  line-height: 1.6;
}

/* Tab navigation - Mobile First */
.tabbed__tabs-wrapper {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1.4rem;
}

.tabbed__tab {
  width: 48%;
  flex-grow:1 !important;
  background: transparent;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 1rem;
  text-align: center;
  cursor: pointer;
  color: var(--custom-dark);
  transition: all 0.3s ease;
  outline: none;
  font-size:90%;
}

.tabbed__tab:hover,
.tabbed__tab--active {
  color: var(--custom-secondary);
  border-color: var(--custom-secondary);
  background-color: rgba(0, 0, 0, 0.02);
}

/* Buttons Styling */
.tabbed__buttons-wrapper {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 3.5rem;

}

.tabbed__btn {
  display: inline-flex;
  align-items: center;
  background: var(--custom-dark);
  color: var(--custom-light);
  border: none;
  padding: 1.2rem 2.5rem;
  text-decoration: none;
  cursor: pointer;
  min-width: 200px;
  justify-content: center;
  border-radius: 0;
  transition: all 0.3s ease;
  font-size: inherit;
  font-family: inherit;
}

.tabbed__btn:last-child {
  background: transparent;
  color: var(--custom-secondary);
  border: 1px solid var(--custom-secondary);
}
.tabbed__btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
}

/* Overlay content */
.tabbed__overlay-content {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  width: calc(100% - 2rem);
  max-width: 400px;
}

.tabbed__content-item {
  display: none;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.4s ease;
  border-radius: 12px;
  padding: 1rem;
  text-align: center;
}

.tabbed__content-item--active {
  display: flex;
  opacity: 1;
  transform: translateY(0);
  align-items: center;
  flex-direction: column;
  gap: 1rem;
}

.tabbed__icon {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabbed__icon img {
  border-radius: 50%;
  background: white;
  padding: 0.8rem;
  width: 45px;
  height: 45px;
  object-fit: contain;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.02);
}

.tabbed__content-title {
  color: var(--custom-light);
  margin-bottom: 0.5rem;
  margin-top: 0;
  line-height: 1.3;
  text-shadow: 1px 1px 5px var(--custom-dark), 0 0 10px var(--custom-dark);
}

.tabbed__content-desc {
  color: var(--custom-light);
  opacity: 0.9;
  line-height: 1.5;
  font-size:87%;
}

.tabbed__content-desc p{
  margin:0;
  text-shadow: 1px 1px 5px var(--custom-dark), 0 0 10px var(--custom-dark);

}

.tabbed__text-col{
  order:2;
}

.tabbed__image-col{
  order:1;
}

/* Tablet Styles - 768px and up */
@media (min-width: 768px) {
  .tabbed__text-inner {
    padding: 3rem 2rem;
    max-width: 600px;
  }
  
  .tabbed__image-col {
    min-height: 500px;
    max-height: 600px;
  }
  
  .tabbed__tabs-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .tabbed__tab {
    padding: 1.2rem;
  }

  .tabbed__buttons-wrapper {
    flex-direction: row;
    justify-content: center;
    gap: 1.5rem;
  }

  .tabbed__btn {
    flex: 0 0 auto;
    min-width: 180px;
    padding: 1.2rem 2.5rem;
  }
  
  .tabbed__overlay-content {
    max-width: 500px;
  }
  
  .tabbed__content-item {
    padding: 1.5rem;
    flex-direction: row;
    text-align: left;
    gap: 1.2rem;
  }
  
  .tabbed__icon img {
    width: 60px;
    height: 60px;
    padding: 1rem;
  }
  
  .tabbed__content-details {
    text-align: left;
  }
}

/* Large Tablet/Small Desktop - 1024px and up */
@media (min-width: 1024px) {
  .tabbed-section {
    flex-direction: row;
  }
  
  .tabbed-section--reverse {
    flex-direction: row-reverse;
  }
  
  .tabbed__text-col,
  .tabbed__image-col {
    flex: 1 1 50%;
  }
  
  .tabbed__text-col {
    order: unset;
  }
  
  .tabbed__image-col {
    order: unset;
    min-height: 550px;
    max-height: 700px;
  }
  
  .tabbed__text-inner {
    margin: 0 0 0 5vw;
    padding: 4vw 3vw 4vw 0;
    text-align: left;
    max-width: 600px;
  }
  
  .tabbed-section--reverse .tabbed__text-inner {
    margin: 0 5vw 0 0;
    padding: 4vw 0 4vw 3vw;
  }
  
  .tabbed__bg-image {
    border-radius: var(--tabbed-border-radius) 0 0 var(--tabbed-border-radius);
  }
  
  .tabbed-section--reverse .tabbed__bg-image {
    border-radius: 0 var(--tabbed-border-radius) var(--tabbed-border-radius) 0;
  }
  
  .tabbed__img:not(.tabbed__bg-image) {
    object-position: left center;
    border-radius: var(--tabbed-border-radius) 0 0 var(--tabbed-border-radius);
  }
  
  .tabbed-section--reverse .tabbed__img:not(.tabbed__bg-image) {
    border-radius: 0 var(--tabbed-border-radius) var(--tabbed-border-radius) 0;
  }
  
  .tabbed__tabs-wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
  
  .tabbed__tab {
    width: calc(48% - 0.75rem);
    min-width: 140px;
    border: none;
    border-bottom: 1px solid #e0e0e0;
    border-radius: 0;
    padding: 1.2rem 0;
    text-align: left;
    background: transparent;
    flex-grow:1;
  }
  
  .tabbed__tab:hover,
  .tabbed__tab--active {
    background: transparent;
    border-color: var(--custom-secondary);
  }

  .tabbed__buttons-wrapper {
    justify-content: flex-start;
  }
  
  .tabbed__overlay-content {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    transform: none;
    width: auto;
    max-width: 500px;
  }
  
  .tabbed-section--reverse .tabbed__overlay-content {
    left: auto;
    right: 2rem;
  }
  
  .tabbed__content-item {
    background: transparent;
    backdrop-filter: none;
    text-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
  }
  
  .tabbed__content-title {
    color: var(--custom-light);
    text-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
  }
  
  .tabbed__content-desc {
    color: var(--custom-light);
    text-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
  }
  
  .tabbed__icon img {
    width: 70px;
    height: 70px;
    padding: 1.2rem;
  }
}

/* Large Desktop - 1200px and up */
@media (min-width: 1200px) {
  .tabbed__text-inner {
    margin: 0 0 0 7vw;
    max-width: 700px;
  }
  
  .tabbed-section--reverse .tabbed__text-inner {
    margin: 0 7vw 0 0;
  }
  
  .tabbed__image-col {
    min-height: 650px;
    max-height: 800px;
  }
  
  .tabbed__tabs-wrapper {
    gap: 2rem;
  }
  
  .tabbed__tab {
    min-width: 160px;
  }
  
  .tabbed__overlay-content {
    max-width: 600px;
  }
}

/* Extra Large Screens - 1400px and up */
@media (min-width: 1400px) {
  .tabbed__text-inner {
    max-width: 800px;
  }
  
  .tabbed__overlay-content {
    max-width: 640px;
  }
}

/* High DPI / Retina Displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .tabbed__icon img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  .tabbed__bg-image,
  .tabbed__content-item,
  .tabbed__tab,
  .tabbed__btn {
    transition: none;
  }
}


/* Dark Mode Support */
{% comment %} @media (prefers-color-scheme: dark) {
  .tabbed__tab {
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .tabbed__content-item {
    background: rgba(0, 0, 0, 0.5);
  }
} {% endcomment %}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('.tabbed__tab');
  const contentItems = document.querySelectorAll('.tabbed__content-item');
  const backgroundImages = document.querySelectorAll('.tabbed__bg-image');

  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const targetIndex = this.getAttribute('data-tab-index');
      
      // Remove active class from all tabs
      tabs.forEach(t => t.classList.remove('tabbed__tab--active'));
      
      // Remove active class from all content items
      contentItems.forEach(item => {
        item.classList.remove('tabbed__content-item--active');
      });
      
      // Remove active class from all background images
      backgroundImages.forEach(bg => {
        bg.classList.remove('tabbed__bg-image--active');
      });
      
      // Add active class to clicked tab
      this.classList.add('tabbed__tab--active');
      
      // Show corresponding content and background with a slight delay for smoother transition
      setTimeout(() => {
        const targetContent = document.querySelector(`[data-content-index="${targetIndex}"]`);
        const targetBackground = document.querySelector(`[data-bg-index="${targetIndex}"]`);
        
        if (targetContent) {
          targetContent.classList.add('tabbed__content-item--active');
        }
        
        if (targetBackground) {
          targetBackground.classList.add('tabbed__bg-image--active');
        }
      }, 50);
    });
  });
  
  // Enhanced touch support for mobile
  tabs.forEach(tab => {
    tab.addEventListener('touchstart', function(e) {
      // Prevent double-tap zoom on iOS
      e.preventDefault();
      this.click();
    }, { passive: false });
  });
  
  // Keyboard navigation support
  tabs.forEach((tab, index) => {
    tab.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
        e.preventDefault();
        const nextTab = tabs[index + 1] || tabs[0];
        nextTab.focus();
        nextTab.click();
      } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
        e.preventDefault();
        const prevTab = tabs[index - 1] || tabs[tabs.length - 1];
        prevTab.focus();
        prevTab.click();
      } else if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        this.click();
      }
    });
  });
});
</script>