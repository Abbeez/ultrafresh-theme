{% schema %}
{
  "name": "Tabbed Features Section",
  "tag": "section",
  "class": "tabbed-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_anchor_id",
      "label": "Custom Section ID (for Smooth Scroll)",
      "default": "tabbed-features"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDFCF9",
      "info": "Leave as-is to mimic --custom-light."
    },

    /* Image position */
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image Border Radius (px)",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0
    },

    /* Default background image */
    {
      "type": "image_picker",
      "id": "default_background_image",
      "label": "Default Background Image",
      "info": "Shows when no specific tab background is set"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Background Image Fit",
      "options": [
        { "value": "cover", "label": "Cover (fill & crop)" },
        { "value": "contain", "label": "Contain (no crop)" }
      ],
      "default": "cover"
    },

    /* Content */
    {
      "type": "text",
      "id": "overline",
      "label": "Sub text (above heading)",
      "default": "Premium Comfort"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (use <span> for accent)",
      "default": "Our Training Pants <span>Features</span>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Made with diaper-like absorbency, feather soft materials and CloudTouchâ„¢ Softness for ultimate comfort, our training pants are perfect for potty training.</p>"
    },

    /* Spacing */
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature_tab",
      "name": "Feature Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Feather Soft"
        },
        {
          "type": "image_picker",
          "id": "tab_icon",
          "label": "Tab Icon"
        },
        {
          "type": "image_picker",
          "id": "tab_background_image",
          "label": "Tab Background Image",
          "info": "Specific background for this tab. If empty, uses default background."
        },
        {
          "type": "text",
          "id": "content_title",
          "label": "Content Title",
          "default": "Feather Soft"
        },
        {
          "type": "richtext",
          "id": "content_description",
          "label": "Content Description",
          "default": "<p>Crafted with an enhanced fibre blend and high-GSM topsheet for luxurious comfort</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabbed Features Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Feather Soft",
            "content_title": "Feather Soft",
            "content_description": "<p>Crafted with an enhanced fibre blend and high-GSM topsheet for luxurious comfort</p>"
          }
        },
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Resealable Tab",
            "content_title": "Resealable Tab",
            "content_description": "<p>Easy-to-use resealable tabs for convenient adjustments</p>"
          }
        },
        {
          "type": "feature_tab",
          "settings": {
            "tab_title": "Dermatologically Tested",
            "content_title": "Dermatologically Tested",
            "content_description": "<p>Tested by dermatologists to ensure safety for sensitive skin</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% assign top_border_style = '' %}
{% if section.settings.show_top_border %}
  {% assign top_border_style = 'border-top: 1px solid var(--custom-borderbg)' %}
{% endif %}

{% assign bottom_border_style = '' %}
{% if section.settings.show_bottom_border %}
  {% assign bottom_border_style = 'border-bottom: 1px solid var(--custom-borderbg)' %}
{% endif %}

<div
  {% if section.settings.custom_anchor_id %}
    id="{{ section.settings.custom_anchor_id | escape }}"
  {% endif %}
  class="tabbed-section{% if section.settings.image_position == 'right' %} tabbed-section--reverse{% endif %}"
  style="
    {{ top_border_style }}; {{ bottom_border_style }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    --tabbed-img-fit: {{ section.settings.image_fit }};
    --tabbed-border-radius: {{ section.settings.image_border_radius | default: 0 }}px;
  "
>
  <div class="tabbed__text-col">
    <div class="tabbed__text-inner">
      {% if section.settings.overline != blank %}
        <div class="tabbed__overline">{{ section.settings.overline }}</div>
      {% endif %}

      <h2 class="h1 tabbed__heading font-cursive">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.description != blank %}
        <div class="tabbed__desc">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="tabbed__tabs-wrapper">
          {% for block in section.blocks %}
            <button 
              class="tabbed__tab{% if forloop.first %} tabbed__tab--active{% endif %}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_title }}
            </button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="tabbed__image-col">
    <!-- Background images for each tab -->
    {% for block in section.blocks %}
      {% assign tab_bg_image = block.settings.tab_background_image %}
      {% if tab_bg_image == blank %}
        {% assign tab_bg_image = section.settings.default_background_image %}
      {% endif %}
      
      {% if tab_bg_image != blank %}
        <img
          src="{{ tab_bg_image | image_url: width: 1600 }}"
          alt="{{ block.settings.content_title | strip_html }}"
          width="1600"
          height="auto"
          loading="lazy"
          class="tabbed__img tabbed__bg-image{% if forloop.first %} tabbed__bg-image--active{% endif %}"
          data-bg-index="{{ forloop.index0 }}"
        >
      {% endif %}
    {% endfor %}

    <!-- Fallback to default background if no tab backgrounds exist -->
    {% unless section.blocks.size > 0 %}
      {% if section.settings.default_background_image != blank %}
        <img
          src="{{ section.settings.default_background_image | image_url: width: 1600 }}"
          alt="{{ section.settings.heading | strip_html }}"
          width="1600"
          height="auto"
          loading="lazy"
          class="tabbed__img tabbed__bg-image tabbed__bg-image--active"
        >
      {% endif %}
    {% endunless %}

    <!-- Overlaid tab content -->
    <div class="tabbed__overlay-content">
      {% for block in section.blocks %}
        <div 
          class="tabbed__content-item{% if forloop.first %} tabbed__content-item--active{% endif %}"
          data-content-index="{{ forloop.index0 }}"
        >
          {% if block.settings.tab_icon != blank %}
            <div class="tabbed__icon">
              <img
                src="{{ block.settings.tab_icon | image_url: width: 120 }}"
                alt="{{ block.settings.content_title | strip_html }}"
                width="80"
                height="80"
                loading="lazy"
              >
            </div>
          {% endif %}

          <div class="tabbed__content-details">
            <h3 class="tabbed__content-title">{{ block.settings.content_title }}</h3>
            
            {% if block.settings.content_description != blank %}
              <div class="tabbed__content-desc">{{ block.settings.content_description }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
/* Base - matching split-section with increased height */
.tabbed-section {
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
  transition: padding 0.2s, background-color 0.2s;
  font-family: inherit; /* Dawn default */
}
.tabbed-section--reverse { flex-direction: row-reverse; }

.tabbed__image-col {
  flex: 1 1 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-height: 650px;
  max-height: 800px;
  overflow: hidden;
}

/* Background images with transitions and dynamic border radius */
.tabbed__bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: var(--tabbed-img-fit);
  object-position: center;
  display: block;
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
  /* When image is on right: top-left & bottom-left radius */
  border-radius: var(--tabbed-border-radius) 0 0 var(--tabbed-border-radius);
}
/* Default: left position gets top-right & bottom-right radius */
.tabbed-section--reverse .tabbed__bg-image {
  border-radius: 0 var(--tabbed-border-radius) var(--tabbed-border-radius) 0;
}

.tabbed__bg-image--active {
  opacity: 1;
}

/* Legacy support for single background image */
.tabbed__img:not(.tabbed__bg-image) {
  width: 100%;
  height: auto;
  object-fit: var(--tabbed-img-fit);
  object-position: left center;
  display: block;
  border-radius: var(--tabbed-border-radius) 0 0 var(--tabbed-border-radius);
}
.tabbed-section--reverse .tabbed__img:not(.tabbed__bg-image) {
  border-radius: 0 var(--tabbed-border-radius) var(--tabbed-border-radius) 0;
}

.tabbed__text-col {
  flex: 1 1 50%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.tabbed__text-inner {
  width: 100%;
  max-width: 800px;
  margin: 0 0 0 7vw;
  padding: 4vw 3vw 4vw 0;
  box-sizing: border-box;
}
.tabbed-section--reverse .tabbed__text-inner {
  margin: 0 7vw 0 0;
  padding: 4vw 0 4vw 3vw;
}

/* Overline / sub text - exact same values */
.tabbed__overline {
  color: var(--custom-dark);
  letter-spacing: 0.06em;
  text-transform: none;
  font-size: 0.9em; /* 90% */
  line-height: 1.2;
  margin-bottom: 0.6rem;
}

/* Heading - exact same values */
.tabbed__heading {
  color: var(--custom-dark);
  margin-bottom: 1.1rem;
  margin-top: 1.1rem;
  line-height: 1.13;
  font-weight: 400; /* normal */
}

/* Description - exact same values */
.tabbed__desc {
  color: var(--custom-dark);
  opacity: 0.93;
  margin-bottom: 1.4rem;
  line-height: 1.6;
}

/* Tab navigation */
.tabbed__tabs-wrapper {
 display: flex;
flex-direction: row;
gap: 20px;  
margin-top: 1.6rem;
flex-wrap: wrap;
}

.tabbed__tab {
width: 45%;
  background: transparent;
  border: none;
  border-bottom: 1px solid #e0e0e0;
  padding: 1.2rem 0;
  text-align: left;
  cursor: pointer;
  font-size: 1em;
  color: var(--custom-dark);
  transition: all 0.3s ease;
  font-weight: 400;
  outline: none;
}

.tabbed__tab:hover,
.tabbed__tab--active {
  color: var(--custom-secondary);
  font-weight: 500;
}

/* Overlay content on image */
.tabbed__overlay-content {
  position: absolute;
  bottom: 2rem;
  left: 2rem;
  z-index: 2;
}
.tabbed-section--reverse .tabbed__overlay-content {
  left: auto;
  right: 2rem;
}

.tabbed__content-item {
  display: none;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.4s ease;
  border-radius: 12px;
  padding: 1.5rem;
  max-width: 640px;
  min-width: 320px;
}

.tabbed__content-item--active {
  display: flex;
  opacity: 1;
  transform: translateY(0);
  align-items: flex-start;
  gap: 1.2rem;
  text-align: left;
}

.tabbed__icon {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tabbed__icon img {
  border-radius: 50%;
  background: white;
  padding: 1.2rem;
  width: 70px;
  height: 70px;
  object-fit: contain;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.tabbed__content-details {
  flex: 1;
  padding-top: 0.5rem;
}

.tabbed__content-title {
  color: var(--custom-light);
  margin-bottom: 0.8rem;
  margin-top: 0;
  font-size: 1.4em;
  font-weight: 600;
  line-height: 1.3;
  text-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
}

.tabbed__content-desc {
  color: var(--custom-light);
  opacity: 0.9;
  line-height: 1.5;
  font-size: 1em;
  text-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
}

/* Enhanced Responsive Breakpoints */

/* Large tablets and small laptops: 768px - 1024px */
@media (max-width: 1024px) {
  .tabbed__text-inner {
    margin: 0 0 0 5vw;
    padding: 3vw 2vw 3vw 0;
  }
  .tabbed-section--reverse .tabbed__text-inner {
    margin: 0 5vw 0 0;
    padding: 3vw 0 3vw 2vw;
  }
  
  .tabbed__overlay-content {
    bottom: 1.5rem;
    left: 1.5rem;
  }
  .tabbed-section--reverse .tabbed__overlay-content {
    left: auto;
    right: 1.5rem;
  }
  
  .tabbed__content-item {
    max-width: 500px;
    min-width: 280px;
    padding: 1.2rem;
  }
  
  .tabbed__icon img {
    width: 60px;
    height: 60px;
    padding: 1rem;
  }
  
  .tabbed__content-title {
    font-size: 1.2em;
  }
  
  .tabbed__content-desc {
    font-size: 0.9em;
  }
}

/* Tablets: 768px - 990px */
@media (max-width: 990px) {
  .tabbed-section { 
    flex-direction: column !important; 
    min-height: auto;
    max-height: none;
  }
  
  .tabbed__image-col,
  .tabbed__text-col { 
    flex: 0 0 100%; 
    min-height: 350px; 
  }
  
  .tabbed__image-col {
    order: 2;
    min-height: 500px;
    max-height: 600px;
  }
  
  .tabbed__text-col {
    order: 1;
  }
  
  .tabbed__bg-image { 
    object-position: center; 
    height: 100%;
    object-fit: cover;
    /* Reset border radius on mobile */
    border-radius: 0 !important;
  }
  
  .tabbed__text-inner {
    margin: 0;
    padding: 5vw 6vw;
    text-align: center;
    max-width: 100%;
  }
  
  .tabbed__tabs-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 2rem;
  }

  .tabbed__tab {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    border-bottom: 1px solid #e0e0e0;
    font-size: 0.9em;
    width: 100%;
  }

  .tabbed__tab:last-child {
  border-bottom: none;
}
  
  .tabbed__overlay-content {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 2rem);
    max-width: 500px;
  }
  
  .tabbed__content-item {
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
  }
}

/* Mobile phones: 480px - 749px */
@media (max-width: 749px) {
  .tabbed__text-inner { 
    padding: 6vw 4vw; 
  }
  
  .tabbed__tabs-wrapper { 
    grid-template-columns: 1fr; 
    gap: 0.8rem;
  }
  
  .tabbed__tab {
    font-size: 0.95em;
    padding: 1.2rem;
  }
  
  .tabbed__heading {
    font-size: 1.8em;
    line-height: 1.2;
  }
  
  .tabbed__desc {
    font-size: 0.95em;
  }
  
  .tabbed__image-col {
    min-height: 450px;
    max-height: 550px;
  }
  
  .tabbed__overlay-content {
    bottom: 0.5rem;
    width: calc(100% - 1rem);
  }
  
  .tabbed__content-item {
    padding: 1rem;
    gap: 1rem;
    flex-direction: column;
    text-align: center;
  }
  
  .tabbed__icon img {
    width: 50px;
    height: 50px;
    padding: 0.8rem;
  }
  
  .tabbed__content-title {
    font-size: 1.1em;
    margin-bottom: 0.5rem;
  }
  
  .tabbed__content-desc {
    font-size: 0.85em;
  }
}

/* Small mobile phones: 320px - 479px */
@media (max-width: 479px) {
  .tabbed__text-inner { 
    padding: 7vw 2rem; 
  }
  
  .tabbed__heading {
    font-size: 1.6em;
  }
  
  .tabbed__overline {
    font-size: 0.8em;
  }
  
  .tabbed__tab {
    padding: 1rem 0.8rem;
    font-size: 0.9em;
  }
  
  .tabbed__image-col {
    min-height: 400px;
    max-height: 500px;
  }
  
  .tabbed__overlay-content {
    width: calc(100% - 0.5rem);
  }
  
  .tabbed__content-item {
    padding: 0.8rem;
    min-width: auto;
  }
  
  .tabbed__icon img {
    width: 45px;
    height: 45px;
  }
  
  .tabbed__content-title {
    font-size: 1em;
  }
  
  .tabbed__content-desc {
    font-size: 0.8em;
  }
}

/* Extra small devices: max 320px */
@media (max-width: 320px) {
  .tabbed__text-inner {
    padding: 8vw 1rem;
  }
  
  .tabbed__heading {
    font-size: 1.4em;
  }
  
  .tabbed__tab {
    padding: 0.8rem 0.5rem;
    font-size: 0.85em;
  }
  
  .tabbed__content-item {
    padding: 0.6rem;
  }
  
  .tabbed__icon img {
    width: 40px;
    height: 40px;
  }
  
  .tabbed__content-title {
    font-size: 0.9em;
  }
  
  .tabbed__content-desc {
    font-size: 0.75em;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('.tabbed__tab');
  const contentItems = document.querySelectorAll('.tabbed__content-item');
  const backgroundImages = document.querySelectorAll('.tabbed__bg-image');

  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const targetIndex = this.getAttribute('data-tab-index');
      
      // Remove active class from all tabs
      tabs.forEach(t => t.classList.remove('tabbed__tab--active'));
      
      // Remove active class from all content items
      contentItems.forEach(item => {
        item.classList.remove('tabbed__content-item--active');
      });
      
      // Remove active class from all background images
      backgroundImages.forEach(bg => {
        bg.classList.remove('tabbed__bg-image--active');
      });
      
      // Add active class to clicked tab
      this.classList.add('tabbed__tab--active');
      
      // Show corresponding content and background with a slight delay for smoother transition
      setTimeout(() => {
        const targetContent = document.querySelector(`[data-content-index="${targetIndex}"]`);
        const targetBackground = document.querySelector(`[data-bg-index="${targetIndex}"]`);
        
        if (targetContent) {
          targetContent.classList.add('tabbed__content-item--active');
        }
        
        if (targetBackground) {
          targetBackground.classList.add('tabbed__bg-image--active');
        }
      }, 50);
    });
  });
  
  // Add touch support for mobile
  tabs.forEach(tab => {
    tab.addEventListener('touchstart', function(e) {
      // Prevent double-tap zoom on iOS
      e.preventDefault();
      this.click();
    });
  });
});
</script>