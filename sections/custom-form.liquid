{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .uf-contact-section-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    justify-content: space-between;
  }

  .uf-contact-section__content-{{ section.id }} {
    flex: 1 1 40%;
  }

  .uf-contact-section__form-{{ section.id }} {
    flex: 1 1 55%;
  }

  .uf-contact-section__heading {
    margin-bottom: 1rem;
    font-size: 2rem;
    font-weight: bold;
  }

  .uf-contact-section__subheading {
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .uf-contact-section__wrapper-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .uf-contact-section__wrapper-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .uf-contact-section-{{ section.id }} {
      flex-direction: column;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width uf-contact-section__wrapper-{{ section.id }}">
    <div class="uf-contact-section-{{ section.id }}">
      
      <!-- Left Column: Rich Content -->
      <div class="uf-contact-section__content-{{ section.id }}">
        {%- if section.settings.rich_heading != blank -%}
          <div class="uf-contact-section__heading">{{ section.settings.rich_heading }}</div>
        {%- endif -%}
        {%- if section.settings.rich_subheading != blank -%}
          <div class="uf-contact-section__subheading">{{ section.settings.rich_subheading }}</div>
        {%- endif -%}
      </div>

      <!-- Right Column: Form -->
      <div class="uf-contact-section__form-{{ section.id }}">
        {%- form 'contact', id: 'ContactForm-{{ section.id }}', class: 'uf-contact-form' -%}
          {%- if form.posted_successfully? -%}
            <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
              {{- 'icon-success.svg' | inline_asset_content -}}
              {{ 'templates.contact.form.post_success' | t }}
            </h2>
          {%- elsif form.errors -%}
            <div class="form__message">
              <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                {{- 'icon-error.svg' | inline_asset_content -}}
                {{ 'templates.contact.form.error_heading' | t }}
              </h2>
            </div>
            <ul class="form-status-list caption-large" role="list">
              <li>
                <a href="#ContactForm-email" class="link">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </a>
              </li>
            </ul>
          {%- endif -%}

          <div class="contact__fields">
            <!-- Name -->
            <div class="field">
              <input class="field__input" type="text" name="contact[{{ 'templates.contact.form.name' | t }}]"
                id="ContactForm-name-{{ section.id }}" placeholder="{{ 'templates.contact.form.name' | t }}"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" autocomplete="name">
              <label class="field__label" for="ContactForm-name-{{ section.id }}">{{ 'templates.contact.form.name' | t }}</label>
            </div>

            <!-- Email -->
            <div class="field field--with-error">
              <input class="field__input" type="email" name="contact[email]" id="ContactForm-email-{{ section.id }}"
                placeholder="{{ 'templates.contact.form.email' | t }}" autocomplete="email" spellcheck="false" autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true" aria-describedby="ContactForm-email-error-{{ section.id }}"
                {% endif %}>
              <label class="field__label" for="ContactForm-email-{{ section.id }}">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
              {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error-{{ section.id }}">
                <span class="form__message">
                  {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                </span>
              </small>
              {%- endif -%}
            </div>

            <!-- Phone -->
            <div class="field">
              <input class="field__input" type="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]"
                id="ContactForm-phone-{{ section.id }}" placeholder="{{ 'templates.contact.form.phone' | t }}" autocomplete="tel"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
              <label class="field__label" for="ContactForm-phone-{{ section.id }}">{{ 'templates.contact.form.phone' | t }}</label>
            </div>

            <!-- Company -->
            <div class="field">
              <input class="field__input" type="text" name="contact[Company]" id="ContactForm-company-{{ section.id }}"
                placeholder="Company Name">
              <label class="field__label" for="ContactForm-company-{{ section.id }}">Company Name</label>
            </div>

            <!-- Inquiry Type -->
            <div class="field">
              <select class="field__input" name="contact[Inquiry Type]" id="ContactForm-inquiry-{{ section.id }}">
                <option value="">Select Inquiry Type</option>
                <option value="General Question">General Question</option>
                <option value="Product Inquiry">Product Inquiry</option>
                <option value="Partnership">Partnership</option>
                <option value="Bulk Order">Bulk Order</option>
                <option value="Others">Others</option>
              </select>
              <label class="field__label" for="ContactForm-inquiry-{{ section.id }}">Inquiry Type</label>
            </div>

            <!-- Partner Checkbox -->
            <div class="field">
              <label class="field__label" for="ContactForm-partner-{{ section.id }}">
                <input type="checkbox" id="ContactForm-partner-{{ section.id }}" name="contact[Interested in Partnership]" value="Yes">
                I’m interested in becoming a partner
              </label>
            </div>
          </div>

          <!-- Message -->
          <div class="field">
            <textarea rows="10" id="ContactForm-body-{{ section.id }}" class="text-area field__input"
              name="contact[{{ 'templates.contact.form.comment' | t }}]"
              placeholder="{{ 'templates.contact.form.comment' | t }}">{{- form.body -}}</textarea>
            <label class="form__label field__label" for="ContactForm-body-{{ section.id }}">
              {{ 'templates.contact.form.comment' | t }}
            </label>
          </div>

          <!-- Submit -->
          <div class="contact__button">
            <button type="submit" class="button">
              {{ 'templates.contact.form.send' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "UF Contact Form",
  "tag": "section",
  "class": "uf-contact-section",
  "settings": [
    {
      "type": "richtext",
      "id": "rich_heading",
      "label": "Heading",
      "default": "<p>Let’s Talk</p>"
    },
    {
      "type": "richtext",
      "id": "rich_subheading",
      "label": "Subheading",
      "default": "<p>Send us a message and we’ll get back to you shortly.</p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "UF Contact Form"
    }
  ]
}
{% endschema %}
