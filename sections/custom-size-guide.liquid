{% comment %}
UltraFresh Size Guide Section
- Simple, plain style inspired by "nutritional info" look
- Two-column table like your first image
- Fully self-contained (no snippets)
{% endcomment %}

<section class="uf-size-guide page-width">
  <div class="sg-card" style="--sg-radius:{{ section.settings.radius }}px">
    {% if section.settings.collapsible %}
      <details class="sg-accordion" {% if section.settings.open_by_default %}open{% endif %}>
        <summary class="sg-summary">
          <span class="sg-summary-title">
            {% if section.settings.header_icon != blank %}
              <span class="sg-icon" aria-hidden="true">{{ section.settings.header_icon }}</span>
            {% endif %}
            {{ section.settings.title }}
          </span>
          {% if section.settings.subtitle != blank %}
            <span class="sg-subtitle">{{ section.settings.subtitle }}</span>
          {% endif %}
        </summary>
        <div class="sg-content">
          <div class="sg-table-wrap">
            <table class="sg-table">
              <thead>
                <tr>
                  <th></th>
                  <th>{{ section.settings.col_a_title }}</th>
                  <th>{{ section.settings.col_b_title }}</th>
                </tr>
              </thead>
              <tbody>
                {% for block in section.blocks %}
                  <tr id="sg-row-{{ block.id }}">
                    <th scope="row" class="sg-label">
                      {% if block.settings.icon != blank %}
                        <span class="sg-emoji" aria-hidden="true">{{ block.settings.icon }}</span>
                      {% endif %}
                      {{ block.settings.label }}
                    </th>
                    <td>{{ block.settings.col_a }}</td>
                    <td>{{ block.settings.col_b }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </details>
    {% else %}
      <div class="sg-summary sg-summary--static">
        <span class="sg-summary-title">
          {% if section.settings.header_icon != blank %}
            <span class="sg-icon" aria-hidden="true">{{ section.settings.header_icon }}</span>
          {% endif %}
          {{ section.settings.title }}
        </span>
        {% if section.settings.subtitle != blank %}
          <span class="sg-subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
      </div>
      <div class="sg-content">
        <div class="sg-table-wrap">
          <table class="sg-table">
            <thead>
              <tr>
                <th></th>
                <th>{{ section.settings.col_a_title }}</th>
                <th>{{ section.settings.col_b_title }}</th>
              </tr>
            </thead>
            <tbody>
              {% for block in section.blocks %}
                <tr id="sg-row-{{ block.id }}">
                  <th scope="row" class="sg-label">
                    {% if block.settings.icon != blank %}
                      <span class="sg-emoji" aria-hidden="true">{{ block.settings.icon }}</span>
                    {% endif %}
                    {{ block.settings.label }}
                  </th>
                  <td>{{ block.settings.col_a }}</td>
                  <td>{{ block.settings.col_b }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {% endif %}
  </div>
</section>

