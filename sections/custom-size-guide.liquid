<style>
.uf-size-guide .sg-card{
  background:#fff;
  border:1px solid #e5e7eb;
  border-radius:var(--sg-radius,12px);
  overflow:hidden;
  font-family:inherit;
}

/* Summary (header) */
.uf-size-guide .sg-summary{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:1rem 1.25rem;
  cursor:pointer;
  background:#f7f7f9;
  border-bottom:1px solid #e5e7eb;
  gap:.5rem;
}
.uf-size-guide .sg-summary--static{ cursor:default; }
.uf-size-guide details > summary { list-style:none; }
.uf-size-guide details > summary::-webkit-details-marker{ display:none; }

.uf-size-guide .sg-summary-title{
  display:flex; align-items:center; gap:.5rem;
  font-weight:600; color:#111827;
}
.uf-size-guide .sg-icon{ font-size:1.1rem; }
.uf-size-guide .sg-subtitle{
  color:#6b7280; font-size:.9rem;
}

/* caret */
.uf-size-guide .sg-summary:after{
  content:"‚ñæ";
  margin-left:.75rem;
  transition:transform .2s ease;
  font-size:.9rem; color:#6b7280;
}
.uf-size-guide details[open] .sg-summary:after{ transform:rotate(180deg); }

/* Table */
.uf-size-guide .sg-table-wrap{ overflow-x:auto; }
.uf-size-guide table.sg-table{
  width:100%;
  border-collapse:collapse;
  table-layout:fixed;
  font-size:.95rem;
}
.uf-size-guide .sg-table th,
.uf-size-guide .sg-table td{
  padding:.9rem 1rem;
  vertical-align:top;
  border-bottom:1px solid #e5e7eb;
  color:#111827;
}
.uf-size-guide .sg-table thead th{
  font-weight:600;
  text-align:left;
  white-space:nowrap;
  background:#f9fafb;
}
.uf-size-guide .sg-label{
  width:34%;
  color:#374151;
  font-weight:500;
}
.uf-size-guide .sg-emoji{
  margin-right:.35rem;
}
@media (max-width: 768px){
  .uf-size-guide .sg-label{ width:40%; }
  .uf-size-guide .sg-table th, .uf-size-guide .sg-table td{ padding:.75rem .75rem; }
}
</style>
