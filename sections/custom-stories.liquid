{% schema %}
{
  "name": "UF Stories Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading (use <span> for accent)",
      "default": "Every story <span>deserves gentle care</span>"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Description",
      "default": "Every baby's journey is filled with joy, discovery, and growth, and at Ultrafresh, we celebrate these special moments—each smile, wiggle, and milestone."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button Label",
      "default": "Click here to see parent stories"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "UF Stories Section"
    }
  ]
}
{% endschema %}

<div class="uf-stories-section">
  <div class="container">
    <div class="uf-stories-header">
      <h2 class="h1 uf-stories-heading font-cursive">{{ section.settings.section_heading }}</h2>
      <div class="uf-stories-description">{{ section.settings.section_description }}</div>
      {% if section.settings.cta_label and section.settings.cta_link %}
        <a href="{{ section.settings.cta_link }}" class="uf-stories-button">
          {{ section.settings.cta_label }}
          <span class="uf-stories-arrow">›</span>
        </a>
      {% endif %}
    </div>

    <div class="uf-stories-swiper" id="secstories">
      <div class="swiper" id="uf-stories-slider">
        <div class="swiper-wrapper">
          {% assign reviews = shop.metaobjects.testimonials.values %}
          {% if reviews.count > 0 %}
            {% for item in reviews %}
              <div class="swiper-slide">
                <div class="uf-story-card">
                  <div class="uf-story-img" style="background-image: url('{{ item.photo | image_url: width: 600, height: 400, crop: "center" }}');"></div>
                  <div class="uf-story-content">
                    <h3 class="h1 uf-story-name font-cursive">{{ item.name }}</h3>
                    <div class="uf-story-message">{{ item.message }}</div>
                    <!-- Product Information Section -->
                    {% assign featured_product = item.featured_product.value %}
                    {% if featured_product != blank %}
                      <div class="uf-story-product-info">
                        <div class="uf-product-details">
                          <div class="uf-product-category">
                            <span class="uf-product-label">Category:</span>
                            <span class="uf-product-value">{{ featured_product.type | default: 'Diaper' }}</span>
                          </div>
                          <div class="uf-product-name">
                            <span class="uf-product-label">Product:</span>
                            <span class="uf-product-value">{{ featured_product.title }}</span>
                          </div>
                        </div>
                        <a href="{{ featured_product.url }}" class="uf-shop-now-btn">
                          Try Now
                          <span class="uf-shop-now-btn-arrow">›</span>
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        </div>
        
        <!-- Navigation -->
        <div class="uf-swiper-button-prev">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="uf-swiper-button-next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        
        <!-- Pagination -->
        <div class="uf-swiper-pagination"></div>
      </div>
    </div>
  </div>
</div>

<style>
.uf-stories-section {
  padding: 4rem 0;
  {% comment %} background-color: var(--custom-bg, #f8f9fa); {% endcomment %}
}

.uf-stories-section div:empty {
  display: block !important;
}

.uf-stories-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.uf-stories-header {
  text-align: center;
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.uf-stories-heading {
  color: var(--custom-dark, #333);
  margin-bottom: 1rem;
  font-size: 2.5rem;
  line-height: 1.2;
}

.uf-stories-heading span {
  color: var(--custom-secondary, #e67e22);
}

.uf-stories-description {
  color: var(--custom-dark, #333);
  opacity: 0.85;
  margin-bottom: 1.5rem;
  line-height: 1.6;
  font-size: 1.1rem;
}

.uf-stories-button {
  display: inline-flex;
  align-items: center;
  color: var(--custom-dark, #333);
  text-decoration: underline;
  font-weight: 500;
  transition: color 0.3s ease;
}

.uf-stories-button:hover {
  color: var(--custom-secondary, #e67e22);
}

.uf-stories-arrow {
  margin-left: 0.5em;
  font-size: 1.3em;
}

/* Swiper Styles */
.uf-stories-swiper {
  position: relative;
}

.uf-stories-swiper .swiper {
  overflow: visible;
}

.uf-story-card {
  background: transparent;
  border-radius: 0;
  overflow: hidden;
  box-shadow: none;
  transition: all 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: row;
  max-width: 1000px;
  margin: 0 auto;
  align-items: center; /* Center align items */
}

.uf-story-card:hover {
  transform: none;
  box-shadow: none;
}

.uf-story-img {
  width: 50%;
  height: 650px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  flex-shrink: 0;
  position: relative;
  align-self: stretch; /* Take up full height of parent */
}

.uf-story-img::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.05) 100%);
}

.uf-story-content {
  width: 50%;
  padding: 4rem 3rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: transparent;
  align-items: flex-start; /* Align content to start */
}

.uf-story-name {
  color: var(--custom-dark, #333);
  font-weight: 300;
  margin-bottom: 1.5rem;
  margin-top: 1.5rem;
  line-height: 1.2;
  font-family: inherit;
}

.uf-story-name.font-cursive {
  font-family: var(--font-cursive, serif);
}

.uf-story-message {
  color: var(--custom-dark, #333);
  opacity: 0.85;
  line-height: 1.7;
  margin-bottom: 1.5rem;
  font-weight: 300;
}

/* Product Information Section */
.uf-story-product-info {
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 1px solid rgba(0,0,0,0.1);
  width: 100%;
}

.uf-product-details {
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.uf-product-category,
.uf-product-name {
  display: flex;
  align-items: flex-start;
  margin-bottom: 0.5rem;
}

.uf-product-category:last-child,
.uf-product-name:last-child {
  margin-bottom: 0;
}

.uf-product-label {
  font-weight: 600;
  color: var(--custom-dark, #333);
  min-width: 80px;
  flex-shrink: 0;
  opacity: 0.8;
}

.uf-product-value {
  color: var(--custom-dark, #333);
  font-weight: 400;
  line-height: 1.4;
}

.uf-shop-now-btn {
  display: inline-flex;
  align-items: center;
  background: transparent;
  color: var(--custom-dark);
  font-weight: 500;
  padding: 0.8rem 1.5rem; /* Reduced padding */
  border: 1px solid var(--custom-dark);
  width: auto; /* Remove full width */
  min-width: auto; /* Remove min-width constraint */
  text-decoration: none;
  cursor: pointer;
  border-radius: 0;
  transition: all 0.3s ease;
  justify-content: center;
}

.uf-shop-now-btn-arrow {
  margin-left: 0.6em;
  font-size: 1.2em;
}

.uf-shop-now-btn:hover {
  background: var(--custom-primary);
  color: var(--custom-dark);
  border-color: var(--custom-primary);
}

/* Responsive adjustments */
@media (max-width: 749px) {
  .uf-product-label {
    min-width: 70px;
  }
  
  .uf-shop-now-btn {
    padding: 0.7rem 1.3rem; /* Smaller padding for mobile */
  }
}

/* Navigation Buttons */
.uf-swiper-button-prev,
.uf-swiper-button-next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  z-index: 10;
  color: var(--custom-dark, #333);
  transition: all 0.4s ease;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.uf-swiper-button-prev:hover,
.uf-swiper-button-next:hover {
  background: rgba(255, 255, 255, 1);
  color: var(--custom-secondary, #e67e22);
  transform: translateY(-50%) scale(1.05);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.uf-swiper-button-prev {
  left: -30px;
}

.uf-swiper-button-next {
  right: -30px;
}

.uf-swiper-button-prev svg,
.uf-swiper-button-next svg {
  width: 20px;
  height: 20px;
}

/* Pagination */
.uf-swiper-pagination {
  position: relative;
  margin-top: 3rem;
  text-align: center;
}

.uf-swiper-pagination .swiper-pagination-bullet {
  width: 8px;
  height: 8px;
  background: var(--custom-dark, #333);
  opacity: 0.25;
  transition: all 0.4s ease;
  margin: 0 6px;
}

.uf-swiper-pagination .swiper-pagination-bullet-active {
  background: var(--custom-secondary, #e67e22);
  opacity: 1;
  transform: scale(1.4);
  width: 24px;
  border-radius: 4px;
}

/* Tablet (≤990px) */
@media (max-width: 990px) {
  .uf-stories-section {
    padding: 3rem 0;
  }
  
  .uf-stories-section .container {
    padding: 0 1.5rem;
  }
  
  .uf-stories-heading {
    font-size: 2rem;
  }
  
  .uf-story-card {
    flex-direction: column;
    max-width: 600px;
  }
  
  .uf-story-img {
    width: 100%;
    height: 350px;
    align-self: auto; /* Reset align-self for mobile layout */
  }
  
  .uf-story-content {
    width: 100%;
    padding: 3rem 2rem;
  }
  
  .uf-story-name {
    font-size: 1.8rem;
  }
  
  .uf-swiper-button-prev {
    left: -15px;
  }
  
  .uf-swiper-button-next {
    right: -15px;
  }
}

/* Mobile Large (≤749px) */
@media (max-width: 749px) {
  .uf-stories-section .container {
    padding: 0 1rem;
  }
  
  .uf-stories-heading {
    font-size: 1.8rem;
  }
  
  .uf-stories-description {
    font-size: 1rem;
  }
  
  .uf-story-name {
    font-size: 1.6rem;
  }
  
  .uf-story-message {
    font-size: 1rem;
  }
  
  .uf-story-content {
    padding: 2.5rem 2rem;
  }
  
  .uf-swiper-button-prev,
  .uf-swiper-button-next {
    width: 50px;
    height: 50px;
  }
  
  .uf-swiper-button-prev {
    left: -10px;
  }
  
  .uf-swiper-button-next {
    right: -10px;
  }
}

/* Mobile Small (≤479px) */
@media (max-width: 479px) {
  .uf-stories-section {
    padding: 2rem 0;
  }
  
  .uf-stories-header {
    margin-bottom: 2rem;
  }
  
  .uf-stories-heading {
    font-size: 1.6rem;
  }
  
  .uf-story-img {
    height: 280px;
  }
  
  .uf-story-content {
    padding: 2rem 1.5rem;
  }
  
  .uf-story-name {
    font-size: 1.4rem;
  }
  
  .uf-story-message {
    font-size: 0.95rem;
  }
  
  .uf-swiper-button-prev,
  .uf-swiper-button-next {
    width: 45px;
    height: 45px;
  }
  
  .uf-swiper-button-prev {
    left: -5px;
  }
  
  .uf-swiper-button-next {
    right: -5px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const storiesSwiper = new Swiper('#uf-stories-slider', {
    slidesPerView: 1,
    spaceBetween: 0,
    loop: true,
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    autoplay: {
      delay: 5000,
      disableOnInteraction: true,
    },
    pagination: {
      el: '.uf-swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.uf-swiper-button-next',
      prevEl: '.uf-swiper-button-prev',
    },
  });
});
</script>