{% schema %}
{
  "name": "UF Stories Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading (use <span> for accent)",
      "default": "Every story <span>deserves gentle care</span>"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Description",
      "default": "Every baby’s journey is filled with joy, discovery, and growth, and at Ultrafresh, we celebrate these special moments—each smile, wiggle, and milestone."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button Label",
      "default": "Click here to see parent stories"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "UF Stories Section"
    }
  ]
}
{% endschema %}

<div class="uf-stories-section">
  <div class="uf-stories-header">
    <div class="uf-stories-header-inner">
      <h2 class="h1 uf-stories-heading">{{ section.settings.section_heading }}</h2>
      <div class="uf-stories-description">{{ section.settings.section_description }}</div>
      {% if section.settings.cta_label and section.settings.cta_link %}
        <a href="{{ section.settings.cta_link }}" class="uf-stories-button">
          {{ section.settings.cta_label }}
          <span class="uf-stories-arrow">›</span>
        </a>
      {% endif %}
    </div>
  </div>

  <div class="uf-marquee-track">
    <div class="uf-marquee-inner">
      {% assign reviews = shop.metaobjects.testimonials.values %}
      {% if reviews.count > 0 %}
        {% for item in reviews %}
          <div class="uf-marquee-card">
            <div class="uf-marquee-img" style="background-image: url('{{ item.photo | image_url: width: 800, height: 600, crop: "center" }}');"></div>
            <div class="uf-marquee-content">
              <div class="h2">{{ item.name }}</div>
              <div class="uf-stories-message">{{ item.message }}</div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
.uf-stories-section {
  background-color: var(--custom-bg);
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.uf-stories-section div:empty {
  display: block !important;
}

.uf-stories-header {
  height: 15vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 1.5rem;
}
.uf-stories-heading {
  color: var(--custom-dark);
  margin-bottom: 0.5rem;
}
.uf-stories-heading span {
  color: var(--custom-secondary);
}
.uf-stories-description {
  color: var(--custom-dark);
  opacity: 0.95;
  margin-bottom: 1rem;
  line-height: 1.6;
}
.uf-stories-button {
  display: inline-flex;
  align-items: center;
  color: var(--custom-dark);
  text-decoration: underline;
  font-weight: 500;
}
.uf-stories-button:hover {
  color: var(--custom-secondary);
}
.uf-stories-arrow {
  margin-left: 0.5em;
  font-size: 1.3em;
}

/* Marquee */
.uf-marquee-track {
  height: 85vh;
  overflow: hidden;
  position: relative;
}
.uf-marquee-inner {
  display: flex;
  width: max-content;
  animation: scroll-left 20s linear infinite alternate;
}
.uf-marquee-card {
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 85vh;
  flex-shrink: 0;
}
.uf-marquee-img {
  width: 50%;
  height: 100%;
  background-size: cover;
  background-position: center;
}
.uf-marquee-content {
  width: 50%;
  background-color: var(--custom-bg);
  color: var(--custom-dark);
  padding: 4rem 7rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.uf-marquee-content .h2 {
  font-size: 180% !important;
  margin-bottom: 15px;
}
.uf-stories-message {
  line-height: 1.6;
}

/* Pause on hover */
.uf-marquee-track:hover .uf-marquee-inner {
  animation-play-state: paused;
}

/* Keyframes */
@keyframes scroll-left {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* Tablet (≤990px) */
@media (max-width: 990px) {
  .uf-stories-header {
    height: auto;
    padding: 2rem 1.5rem;
  }
  .uf-marquee-track {
    height: auto;
  }
  .uf-marquee-card {
    flex-direction: column;
    height: auto;
  }
  .uf-marquee-img,
  .uf-marquee-content {
    width: 100%;
    height: auto;
  }
  .uf-marquee-img {
    height: 300px;
  }
  .uf-marquee-content {
    padding: 2.5rem 2rem;
  }
  .uf-marquee-content .h2 {
    font-size: 150% !important;
  }
}

/* Mobile Large (≤749px) */
@media (max-width: 749px) {
  .uf-marquee-content {
    padding: 2rem 1.5rem;
  }
  .uf-marquee-content .h2 {
    font-size: 140% !important;
  }
  .uf-stories-message {
    font-size: 95%;
  }
}

/* Mobile Small (≤479px) */
@media (max-width: 479px) {
  .uf-marquee-img {
    height: 220px;
  }
  .uf-marquee-content {
    padding: 2rem 1rem;
  }
  .uf-marquee-content .h2 {
    font-size: 125% !important;
  }
  .uf-stories-message {
    font-size: 90%;
  }
}
</style>
