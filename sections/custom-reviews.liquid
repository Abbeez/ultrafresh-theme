<section class="uf-review-slider">
  <div class="page-width">
    {% assign heading_img_width = section.settings.heading_image_width | default: 80 %}

    <div class="uf-review-slider-header">
      {% if section.settings.heading != blank %}
        <div class="uf-review-heading-wrap">
          <h2 class="h1 uf-review-slider-heading font-cursive">{{ section.settings.heading }}</h2>

          {% if section.settings.heading_image != blank %}
            <img
              class="uf-review-heading-image"
              src="{{ section.settings.heading_image | image_url: width: heading_img_width }}"
              alt="{{ section.settings.heading_image_alt | escape }}"
              loading="lazy"
              decoding="async"
              style="width: {{ heading_img_width }}px; height: auto;"
            >
          {% endif %}
        </div>
      {% endif %}

      {% comment %} <div class="uf-swiper-nav" aria-label="Review navigation">
        <button type="button" class="uf-swiper-prev uf-circle-arrow" aria-label="Previous">←</button>
        <button type="button" class="uf-swiper-next uf-circle-arrow" aria-label="Next">→</button>
      </div> {% endcomment %}
      
    </div>

    {% assign all_reviews = shop.metaobjects.reviews.values %}
    {% if all_reviews.count > 0 %}
      <div class="swiper uf-swiper-container">
        <div class="swiper-wrapper">
          {% for review in all_reviews %}
            <div class="swiper-slide uf-review-card">
              <div class="uf-review-card-inner">
                {% if review.review_title != blank %}
                  <h3 class="h4 uf-review-title">{{ review.review_title }}</h3>
                {% endif %}

                {% if review.review_comment != blank %}
                  <p class="uf-review-comment">“{{ review.review_comment }}”</p>
                {% endif %}

                <div class="uf-review-meta">
                  {% if review.reviewer_name != blank %}
                    <span class="uf-reviewer-name">{{ review.reviewer_name }}</span>
                  {% endif %}

                  {% assign rating_string = review.review_rating.value | split: ' ' | first %}
                  {% assign rating_number = rating_string | plus: 0 %}
                  <div class="uf-review-stars" aria-hidden="true">
                    {% for i in (1..5) %}
                      {% if i <= rating_number %}★{% else %}☆{% endif %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
  {% comment %} <div class="uf-swiper-pagination"></div> {% endcomment %}
</section>

<style>
/* Section spacing & base color */
.uf-review-slider {
  padding: 64px 0;
  color: var(--theme-secondary);
}

.uf-review-slider .swiper-wrapper {box-sizing:border-box !important;}

/* Header centered; nav floats right */
.uf-review-slider-header {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 2rem;
}

/* Wrap heading + optional image, keep centered */
.uf-review-heading-wrap {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
}

/* h2 tweaks: add bottom spacing only (no font-sizes) */
.uf-review-slider-heading {
  margin: 0 0 0.75rem 0;   /* requested margin-bottom */
  padding-bottom: 0.25rem; /* subtle underline spacing if ever needed */
  text-align: center;
}

/* Decorative heading image (like your owl) */
.uf-review-heading-image {
  display: inline-block;
  transform: translateY(-4px); /* slight lift like in your reference */
}

/* Nav to the right */
.uf-swiper-nav {
  position: absolute;
  right: 0;
  display: flex;
  gap: 0.5rem;
}

/* Minimal circular arrows */
.uf-circle-arrow {
  width: 36px;
  height: 36px;
  border: 1px solid var(--theme-secondary);
  border-radius: 50%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  color: var(--theme-secondary);
  cursor: pointer;
  line-height: 1;
}

/* Slides look clean + centered */
.uf-review-card {
  position: relative;
  background: transparent;
  border: none;
  border-radius: 0;
  padding: 0 24px;
  display: flex;
  height: auto;
  align-items: stretch;
}

.uf-review-card-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.9rem;
  max-width: 520px;
  margin: 0 auto;
}

/* Vertical separators between slides (desktop only) */
.uf-review-card::after {
  content: "";
  position: absolute;
  right: -10px;
  top: 10%;
  bottom: 10%;
  width: 1px;
  background: currentColor;
  opacity: 0.25;
}
.uf-review-card:last-child::after { display: none; }

.uf-review-title { margin: 0; }
.uf-review-comment { margin: 0; opacity: 0.9; max-width: 46ch; }

.uf-review-meta {
  display: flex;
  gap: 1rem;
  align-items: center;
  justify-content: center;
  opacity: 0.95;
}
.uf-reviewer-name { font-weight: 600; }

/* Stars keep theme typography; only color/spacing */
.uf-review-stars { color: #f6b400; letter-spacing: 0.1em; }

/* Responsive tweaks */
@media (max-width: 1023px) {
  .uf-review-card::after { display: none; }
}
@media (max-width: 749px) {
  .uf-review-slider { padding: 48px 0; }
  .uf-swiper-nav { position: static; justify-content: center; margin-top: 1rem; }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const ufSlider = document.querySelector('.uf-swiper-container');
    if (ufSlider && typeof Swiper !== 'undefined') {
      new Swiper(ufSlider, {
        slidesPerView: 1,
        spaceBetween: 20,
              autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
        {% comment %} navigation: { nextEl: '.uf-swiper-next', prevEl: '.uf-swiper-prev' }, {% endcomment %}
        pagination: {
        el: '.uf-swiper-pagination',
        clickable: true,
        },
        breakpoints: { 768: { slidesPerView: 2 }, 1024: { slidesPerView: 3 } },
      });
    }
  });
</script>

{% schema %}
{
  "name": "Review Slider (Scoped)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Happy Parents"
    },
    {
      "type": "image_picker",
      "id": "heading_image",
      "label": "Heading Icon/Image"
    },
    {
      "type": "number",
      "id": "heading_image_width",
      "label": "Heading Image Width (px)",
      "default": 80
    },
    {
    "type": "text",
    "id": "heading_image_alt",
    "label": "Heading Image Alt (optional)",
    "default": "Decorative icon"
    }
  ],
  "presets": [
    { "name": "Scoped Review Slider" }
  ]
}
{% endschema %}
