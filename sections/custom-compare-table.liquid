{% schema %}
{
  "name": "Flex Comparison",
  "tag": "section",
  "class": "flex-comparison-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_anchor_id",
      "label": "Custom Section ID (for Smooth Scroll)",
      "default": "flex-comparison"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDFCF9"
    },
    {
      "type": "range",
      "id": "featured_border_radius",
      "label": "Featured Column Border Radius (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 20
    },

    /* Content */
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Whelp vs Kustomer."
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Compare the features of Whelp and Kustomer with our comprehensive comparison page and see why Whelp is the top choice for businesses."
    },
    {
      "type": "range",
      "id": "header_max_width",
      "label": "Header/Description Max Width (px)",
      "min": 400,
      "max": 1400,
      "step": 20,
      "default": 960
    },
    {
      "type": "range",
      "id": "spacing_before_cards",
      "label": "Spacing Before Cards (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 32
    },

    /* Column Headers */
    {
      "type": "text",
      "id": "column_1_name",
      "label": "Column 1 Name (Featured)",
      "default": "Whelp"
    },
    {
      "type": "text",
      "id": "column_2_name",
      "label": "Column 2 Name",
      "default": "Kustomer"
    },

    /* Section spacing */
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 80
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature Name",
          "default": "Integration with popular messaging apps"
        },
        {
          "type": "checkbox",
          "id": "column_1_value",
          "label": "Column 1 Has Feature",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "column_2_value",
          "label": "Column 2 Has Feature",
          "default": true
        },
        {
          "type": "text",
          "id": "column_1_text",
          "label": "Column 1 Custom Text (optional)"
        },
        {
          "type": "text",
          "id": "column_2_text",
          "label": "Column 2 Custom Text (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flex Comparison",
      "category": "Custom",
      "blocks": [
        {
          "type": "comparison_row",
          "settings": {
            "feature_name": "Integration with popular messaging apps",
            "column_1_value": true,
            "column_2_value": true
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "feature_name": "Multi-language support",
            "column_1_value": true,
            "column_2_value": true
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "feature_name": "On-Premises deployment",
            "column_1_value": true,
            "column_2_value": false
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% assign top_border_style = '' %}
{% if section.settings.show_top_border %}
  {% assign top_border_style = 'border-top: 1px solid var(--custom-borderbg)' %}
{% endif %}

{% assign bottom_border_style = '' %}
{% if section.settings.show_bottom_border %}
  {% assign bottom_border_style = 'border-bottom: 1px solid var(--custom-borderbg)' %}
{% endif %}

<div
  {% if section.settings.custom_anchor_id %}
    id="{{ section.settings.custom_anchor_id | escape }}"
  {% endif %}
  class="flex-comparison-section"
  style="
    {{ top_border_style }}; {{ bottom_border_style }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  <div class="page-width">
    <!-- Header -->
    <div class="flex-comparison__header flex-comparison__header--align-{{ section.settings.heading_alignment }}">
      <div class="flex-comparison__header-inner" style="max-width: {{ section.settings.header_max_width }}px;">
        <h2 class="h1 font-cursive flex-comparison__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <div class="flex-comparison__description">{{ section.settings.description }}</div>
        {% endif %}
      </div>
    </div>

    <!-- Grid -->
    <div class="flex-comparison__container" style="margin-top: {{ section.settings.spacing_before_cards }}px;">

      <!-- Features (40%) -->
      <div class="flex-comparison__features-column">
        <div class="flex-comp-header flex-comparison__features-header">Features</div>
        {% for block in section.blocks %}
          <div class="flex-comparison__feature-row {% cycle 'row-odd', 'row-even' %}" {{ block.shopify_attributes }}>
            {{ block.settings.feature_name }}
          </div>
        {% endfor %}
        <!-- dummy to keep heights aligned -->
        <div class="flex-comparison__feature-row" style="visibility:hidden;">Dummy Feature</div>
      </div>

      <!-- Featured (30%) -->
      <div class="flex-comparison__featured-column" style="border-radius: {{ section.settings.featured_border_radius }}px;">
        <div class="flex-comp-header flex-comparison__featured-header">
          {{ section.settings.column_1_name }}
        </div>
        {% for block in section.blocks %}
          <div class="flex-comparison__featured-row {% cycle 'row-odd', 'row-even' %}" {{ block.shopify_attributes }}>
            {% if block.settings.column_1_text and block.settings.column_1_text != '' %}
              {{ block.settings.column_1_text }}
            {% else %}
              {% if block.settings.column_1_value %}✔{% else %}✖{% endif %}
            {% endif %}
          </div>
        {% endfor %}
        <div class="flex-comparison__featured-row" style="visibility:hidden;">✔</div>
      </div>

      <!-- Competitor (30%) -->
      <div class="flex-comparison__competitor-column">
        <div class="flex-comp-header flex-comparison__competitor-header">
          {{ section.settings.column_2_name }}
        </div>
        {% for block in section.blocks %}
          <div class="flex-comparison__competitor-row {% cycle 'row-odd', 'row-even' %}" {{ block.shopify_attributes }}>
            {% if block.settings.column_2_text and block.settings.column_2_text != '' %}
              {{ block.settings.column_2_text }}
            {% else %}
              {% if block.settings.column_2_value %}✔{% else %}✖{% endif %}
            {% endif %}
          </div>
        {% endfor %}
        <div class="flex-comparison__competitor-row" style="visibility:hidden;">✖</div>
      </div>

    </div>
  </div>
</div>

<style>
.flex-comparison-section { width: 100%; font-family: inherit; }

/* Header */
.flex-comparison__header { margin-bottom: 1.5rem; }
.flex-comparison__header-inner { width: 100%; }
.flex-comparison__header--align-left .flex-comparison__header-inner { text-align: left; margin-left: 0; margin-right: auto; }
.flex-comparison__header--align-center .flex-comparison__header-inner { text-align: center; margin-left: auto; margin-right: auto; }
.flex-comparison__header--align-right .flex-comparison__header-inner { text-align: right; margin-left: auto; margin-right: 0; }
.flex-comparison__heading { color: var(--custom-dark, #000); margin-bottom: 0.5rem; line-height: 1.2; font-weight: 400; }
.flex-comparison__description { color: var(--custom-dark, #000); opacity: .8; line-height: 1.5; margin-left: auto; margin-right: auto; }

/* Layout 40-30-30 */
.flex-comparison__container { display: flex; width: 100%; gap: 1rem; }
.flex-comparison__features-column { width: 40%; }
.flex-comparison__featured-column { width: 30%; border: 2px solid var(--custom-dark); overflow: hidden; background: #fff; }
.flex-comparison__competitor-column { width: 30%; }

/* Headers */
.flex-comp-header { padding: 1rem; text-align: center; font-weight: 700; min-height: 50px; line-height: 1.4; }
.flex-comparison__features-header { visibility: hidden; }
.flex-comparison__featured-header { background: #f8f9fa; border-bottom: 1px solid #e9ecef; }
.flex-comparison__competitor-header { color: var(--custom-dark, #000); }

/* Rows */
.flex-comparison__feature-row,
.flex-comparison__featured-row,
.flex-comparison__competitor-row {
  padding: 1rem;
  min-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.flex-comparison__feature-row { justify-content: flex-start; text-align: left; }

/* Alternating rows */
.row-odd { background-color: rgba(0,0,0,0.03); }
.row-even { background-color: transparent; }

/* Responsive */
@media (max-width: 749px) {
  .flex-comparison__container { flex-direction: column; }
  .flex-comparison__features-column,
  .flex-comparison__featured-column,
  .flex-comparison__competitor-column { width: 100%; }
}
</style>
