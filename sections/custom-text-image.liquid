{% schema %}
{
  "name": "UF Text Image Split",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 60
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (use <span> for accent)",
      "default": "Why does every layer <span>feel like Love?</span>"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "From ultra-soft topsheet to leak-locking core, every layer of UltraFresh Diapers is thoughtfully made to keep your baby comfy, dry, and cared for—because it all starts with love and protection."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "See What's Inside UltraFresh Diapers"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "UF Text Image Split"
    }
  ]
}
{% endschema %}

<div class="uf-split-section{% if section.settings.image_position == 'right' %} uf-split-section--reverse{% endif %}"
  style="padding-top: {{ section.settings.padding_top | default: 60 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 60 }}px;">
  <div class="uf-split__image-col">
    {% if section.settings.section_image != blank %}
      <img 
        src="{{ section.settings.section_image | image_url: width: 1000 }}"
        alt="{{ section.settings.heading | strip_html }}"
        width="900"
        height="auto"
        loading="lazy"
        class="uf-split__img"
      >
    {% endif %}
  </div>
  <div class="uf-split__text-col">
    <div class="uf-split__text-inner">
      <h2 class="h1 uf-split__heading">
        {{ section.settings.heading }}
      </h2>
      <div class="uf-split__desc">{{ section.settings.description }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="uf-split__btn">
          {{ section.settings.button_label }}
          <span class="uf-split__btn-arrow">›</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.uf-split-section {
  width: 100vw;
  min-height: 500px;
  background: var(--custom-bg);
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
  transition: padding 0.2s;
}
.uf-split-section--reverse {
  flex-direction: row-reverse;
}
.uf-split__image-col {
  flex: 1 1 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-height: 350px;
  overflow: hidden;
  background: var(--custom-light);
}
.uf-split__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: left center;
  display: block;
  border-radius: 0;
  max-width: none;
  min-width: 100%;
  min-height: 100%;
}
.uf-split-section--reverse .uf-split__img {
  object-position: right center;
}
.uf-split__text-col {
  flex: 1 1 50%;
  background: var(--custom-bg);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
}
.uf-split__text-inner {
  width: 100%;
  max-width: 600px;
  margin: 0 0 0 7vw;
  padding: 4vw 3vw 4vw 0;
  box-sizing: border-box;
  text-align: left;
}
.uf-split-section--reverse .uf-split__text-inner {
  margin: 0 7vw 0 0;
  padding: 4vw 0 4vw 3vw;
  text-align: left;
}
.uf-split__heading {
  color: var(--custom-dark);
  font-weight: 400;
  margin-bottom: 1.3rem;
  line-height: 1.13;
}
.uf-split__heading span {
  color: var(--custom-secondary);
  font-weight: 400;
}
.uf-split__desc {
  color: var(--custom-dark);
  opacity: 0.93;
  margin-bottom: 2.1rem;
  line-height: 1.6;
}

/* Outline Button (1px border) */
.uf-split__btn {
  display: inline-flex;
  align-items: center;
  background: transparent;
  color: var(--custom-dark);
  font-weight: 500;
  padding: 1.1rem 2.3rem 1.1rem 2.3rem;
  border-radius: 0;
  border: 1px solid var(--custom-dark);
  min-width: 260px;
  justify-content: center;
  text-decoration: none;
  cursor: pointer;
  transition: background 0.18s, color 0.18s, border-color 0.18s;
}
.uf-split__btn-arrow {
  margin-left: 0.8em;
  font-size: 1.3em;
  line-height: 1;
}
.uf-split__btn:hover,
.uf-split__btn:focus {
  background: var(--custom-primary);
  color: var(--custom-dark);
  border-color: var(--custom-primary);
}
@media (max-width: 1100px) {
  .uf-split-section,
  .uf-split-section--reverse {
    flex-direction: column !important;
  }
  .uf-split__image-col,
  .uf-split__text-col {
    flex: 0 0 100%;
    min-height: 240px;
    max-width: 100vw;
  }
  .uf-split__img {
    min-width: 100vw;
    height: 300px;
    object-fit: cover;
    object-position: center;
  }
  .uf-split__text-inner,
  .uf-split-section--reverse .uf-split__text-inner {
    margin: 0;
    padding: 6vw 5vw;
    max-width: 98vw;
    text-align: center;
  }
  .uf-split__heading, .uf-split__desc {
    text-align: center;
  }
  .uf-split-section {
    padding-top: 36px !important;
    padding-bottom: 36px !important;
  }
}
@media (max-width: 600px) {
  .uf-split__img {
    min-width: 100vw;
    height: 180px;
  }
  .uf-split__text-inner,
  .uf-split-section--reverse .uf-split__text-inner {
    padding: 1.3rem 0.5rem;
  }
  .uf-split__btn {
    min-width: 120px;
    padding: 0.7rem 1.2rem 0.7rem 1.2rem;
  }
  .uf-split-section {
    padding-top: 18px !important;
    padding-bottom: 18px !important;
  }
}
</style>
