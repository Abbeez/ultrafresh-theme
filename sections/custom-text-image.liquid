{% schema %}
{
  "name": "Image and Content Column",
  "tag": "section",
  "class": "split-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_anchor_id",
      "label": "Custom Section ID (for Smooth Scroll)",
      "default": "image-content"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 60
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (use <span> for accent)",
      "default": "Why does every layer <span>feel like Love?</span>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "See What's Inside"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image and Content Column",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% assign top_border_style = '' %}
{% if section.settings.show_top_border %}
  {% assign top_border_style = 'border-top: 1px solid var(--custom-dark)' %}
{% endif %}

{% assign bottom_border_style = '' %}
{% if section.settings.show_bottom_border %}
  {% assign bottom_border_style = 'border-bottom: 1px solid var(--custom-dark)' %}
{% endif %}

<div
  {% if section.settings.custom_anchor_id %}
    id="{{ section.settings.custom_anchor_id | escape }}"
  {% endif %}
  class="split-section{% if section.settings.image_position == 'right' %} split-section--reverse{% endif %}"
  style="{{ top_border_style }}; {{ bottom_border_style }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="split__image-col">
    {% if section.settings.section_image != blank %}
      <img 
        src="{{ section.settings.section_image | image_url: width: 1000 }}"
        alt="{{ section.settings.heading | strip_html }}"
        width="900"
        height="auto"
        loading="lazy"
        class="split__img"
      >
    {% endif %}
  </div>
  <div class="split__text-col">
    <div class="split__text-inner">
      <h2 class="h1 split__heading">
        {{ section.settings.heading }}
      </h2>
      <div class="split__desc">{{ section.settings.description }}</div>
      {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="split__btn">
          {{ section.settings.button_label }}
          <span class="split__btn-arrow">â€º</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.split-section {
  width: 100vw;
  min-height: 500px;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
  transition: padding 0.2s;
}
.split-section--reverse {
  flex-direction: row-reverse;
}
.split__image-col {
  flex: 1 1 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-height: 350px;
  overflow: hidden;
}
.split__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: left center;
  display: block;
}
.split-section--reverse .split__img {
  object-position: right center;
}
.split__text-col {
  flex: 1 1 50%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.split__text-inner {
  width: 100%;
  max-width: 800px;
  margin: 0 0 0 7vw;
  padding: 4vw 3vw 4vw 0;
  box-sizing: border-box;
}
.split-section--reverse .split__text-inner {
  margin: 0 7vw 0 0;
  padding: 4vw 0 4vw 3vw;
}
.split__heading {
  color: var(--custom-dark);
  margin-bottom: 1.3rem;
  line-height: 1.13;
}
.split__heading span {
  color: var(--custom-secondary);
}
.split__desc {
  color: var(--custom-dark);
  opacity: 0.93;
  margin-bottom: 2.1rem;
  line-height: 1.6;
}
.split__btn {
  display: inline-flex;
  align-items: center;
  background: transparent;
  color: var(--custom-dark);
  font-weight: 500;
  padding: 1.1rem 2.3rem;
  border: 1px solid var(--custom-dark);
  min-width: 260px;
  text-decoration: none;
  cursor: pointer;
}
.split__btn-arrow {
  margin-left: 0.8em;
  font-size: 1.3em;
}
.split__btn:hover {
  background: var(--custom-primary);
  color: var(--custom-dark);
  border-color: var(--custom-primary);
}
@media (max-width: 1100px) {
  .split-section {
    flex-direction: column !important;
  }
  .split__image-col,
  .split__text-col {
    flex: 0 0 100%;
    min-height: 350px;
  }
  .split__img {
    height: 550px;
    object-position: center;
  }
  .split__text-inner {
    margin: 0;
    padding: 6vw 5vw;
    text-align: center;
  }
}
@media (max-width: 600px) {
  .split__img {
    height: 280px;
  }
  .split__btn {
    min-width: 120px;
    padding: 0.7rem 1.2rem;
  }
}
</style>
